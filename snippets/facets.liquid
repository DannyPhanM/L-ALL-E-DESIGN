                                            {%- endif -%}
                                          />
                                        </div>
                                      </div>
                                      <div class="field">
                                        <label class="field__label filter-group-option label--{{ settings.typography_preset }}{% if uppercase_body_s %} uppercase{% endif %}{% if bolder_body_s %} bolder-font{% endif %}" for="Desktop-Filter-{{ filter.label | escape }}-LTE">{{ 'products.facets.to' | t }}</label>
                                          <div class="field__item" dir="ltr">
