{% liquid
  assign collections_source = 'blocks'
  assign collections_source_size = section.blocks.size
  if section.settings.collection_list != blank and section.settings.collection_list.count > 0
    assign collections_source = 'collection_list_setting'
    assign collections_source_size = section.settings.collection_list.count
  endif

  assign has_content = false
  if request.design_mode and collections_source_size > 0
    assign has_content = true
  else
    if section.settings.collection_list.count > 0
      assign has_content = true
    else
      for block in section.blocks
        if block.settings.collection != blank
          assign has_content = true
          break
        endif
      endfor
    endif
  endif
%}

{% if has_content %}
  {{ 'component-product-features.css' | asset_url | stylesheet_tag }}
  {{ 'component-slider.css' | asset_url | stylesheet_tag }}
  {{ 'featured-collections.css' | asset_url | stylesheet_tag }}

  {%- liquid 
      assign settings_page_width = settings.max_page_width | append: 'px'
      if settings.typography_preset == 'avant_garde'
          assign close_weight = settings.accent_icon_weight
          if settings.swap_fonts
              assign close_weight = settings.base_icon_weight
          endif
      else 
          assign close_weight =  settings.base_icon_weight
          if settings.swap_fonts
              assign close_weight = settings.accent_icon_weight
          endif
      endif

      assign max_columns = section.settings.max_columns | times: 1
      if collections_source_size < max_columns
          assign columns = collections_source_size
      else
          assign columns = max_columns
      endif
      assign mobileLayout = 1
      if collections_source_size < mobileLayout
          assign mobileLayout = collections_source_size
      endif
      if settings.typography_preset == 'custom'
          assign close_weight = settings.custom_icon_weight
      endif
      assign uppercase_heading = false
      assign bolder_heading = false
      if settings.typography_preset == 'custom' and section.settings.item_heading_size == 'default'
          if settings.uppercase_body_s
          assign uppercase_heading = true
          endif
          if settings.bolder_font_body_s
          assign bolder_heading = true
          endif
      endif
      assign uppercase_text = false
      assign bolder_text = false
      if settings.typography_preset == 'custom' and section.settings.text_size == 'default'
          if settings.uppercase_body_m
          assign uppercase_text = true
          endif
          if settings.bolder_font_body_m
          assign bolder_text = true
          endif
      endif
      assign mobile_block_width = '100vw'
      if mobileLayout == 2
          assign mobile_block_width = 'calc(100vw / 2)'
      endif

      assign uppercase_title = false
      assign bolder_title_font = false
      if settings.typography_preset == 'custom' and settings.collection_title_size == 'default'
          if settings.uppercase_heading_xs
              assign uppercase_title = true
          endif
          if settings.bolder_font_heading_xs 
              assign bolder_title_font = true
          endif
      endif

      assign image_media_ratio = ''
      if section.settings.image_ratio == 'square'
          assign image_media_ratio = '1/1'
      elsif section.settings.image_ratio == 'portrait'
          assign image_media_ratio = '4/5'
      elsif section.settings.image_ratio == 'traditional'
          assign image_media_ratio = '4/3'
      endif

      assign aspect_ratio_parts = image_media_ratio | split: '/'
      assign aspect_ratio_height = aspect_ratio_parts[0] | times: 1
      assign aspect_ratio_width = aspect_ratio_parts[1] | times: 1
      assign card_height = 150
      assign card_image_width = card_height | times: aspect_ratio_height | divided_by: aspect_ratio_width 
      assign card_text_min_width = 180
      
  -%}

  {% style %}
    #shopify-section-{{ section.id }} {
        --padding-top: {{ section.settings.desktop_padding_top }}px;
        --padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
        {% if section.settings.image_radius == 'default' %}
            --image-radius: {{ settings.product_card_radius }};
        {% else %}
            --image-radius: {{ section.settings.image_radius }};
        {% endif %}
        --card-image-width: {{ card_image_width }}px;
        --card-text-min-width: {{ card_text_min_width }}px;
        --card-height: {{ card_height }}px; 
        --aspect-ratio: {{ image_media_ratio }};
        --line-color: rgba(var(--layout-text-color), var(--line-opacity));
        --reduce-items: 0;
        --desktop-columns: calc({{ columns }} - var(--reduce-items));
        {% if section.settings.color_type == 'invert' %}
          --layout-text-color:
            {{ settings.layout_background_color.red }},
            {{ settings.layout_background_color.green }},
            {{ settings.layout_background_color.blue }};
          --layout-background-color:
            {{ settings.layout_text_color.red }},
            {{ settings.layout_text_color.green }}, 
            {{ settings.layout_text_color.blue }};
        {% endif %}
        {% if section.settings.color_type == 'custom' %}
          --layout-text-color:
            {{ section.settings.text_color.red }},
            {{ section.settings.text_color.green }}, 
            {{ section.settings.text_color.blue }};
          --layout-background-color:
            {{ section.settings.background_color.red }},
            {{ section.settings.background_color.green }}, 
            {{ section.settings.background_color.blue }};
        {% endif %}
        background-color: rgb(var(--layout-background-color));
        color: rgb(var(--layout-text-color));

        .product-labels--grid .product-labels__container {
            gap: 0px!important;
            grid-auto-rows: minmax({{ card_height }}px, auto);       
            grid-template-columns: repeat(
              auto-fit,
              minmax(calc(var(--card-height) * var(--aspect-ratio) + var(--card-text-min-width)), 1fr)
            );
            @media screen and (max-width: 420px) {    
              grid-auto-rows: minmax({{ card_height | minus: 10 }}px, auto); 
            }
        }

        .product-labels--grid .product-labels__container--2 {
            grid-template-columns: repeat(
              auto-fit,
              minmax(calc(var(--card-height) * var(--aspect-ratio) + var(--card-text-min-width)), 50%)
            );
        }
        .product-labels--grid .product-labels__container--3 {
            grid-template-columns: repeat(
              auto-fit,
              minmax(
                clamp(
                  calc(var(--card-height) * var(--aspect-ratio) + var(--card-text-min-width)),
                  calc((100% - (var(--collections-gap)) * 2) / 3),
                  calc((100% - var(--collections-gap)) / 2)
                ), 1fr)
            );
        }
        .product-labels--grid .product-labels__container--4 {
            grid-template-columns: repeat(
              auto-fit,
              minmax(
                clamp(
                  calc(var(--card-height) * var(--aspect-ratio) + var(--card-text-min-width)),
                  calc((100% - (var(--collections-gap)) * 3) / 4),
                  calc((100% - (var(--collections-gap)) * 2) / 3)
                ),
                1fr
              )
            );
        }
    }
    @media screen and (max-width: 920px) {
      #shopify-section-{{ section.id }} {
        --padding-top: {{ section.settings.mobile_padding_top }}px;
        --padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      }
    }
  {% endstyle %}

  <div class="product-labels color-{{ section.settings.color_type }} {% if section.settings.color_type != 'default' %}no-default-color{% endif %} ordinal-section ordinal-section--{{ settings.white_space }} slider-container-js product-labels--{{ settings.white_space }} product-labels--grid section-padding--{{ settings.white_space }} {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}">
    {% if section.settings.heading != blank or section.settings.heading != blank and settings.center_text == false and section.settings.center_text == false %}  
      <div class="product-labels__header {% if section.settings.center_text or settings.center_text %}center-elements{% endif %}">
          {% if section.settings.heading != blank %}
            {% liquid
              assign uppercase_font = false
              assign bolder_font = false
              if settings.typography_preset == 'custom' and section.settings.heading_size == 'default'
                if settings.uppercase_heading_xs
                    assign uppercase_font = true
                endif
                if settings.bolder_font_heading_xs
                    assign bolder_font = true
                endif
              endif

              assign heading_text = section.settings.heading
              assign final_text = ''
              assign split_text_curly = heading_text | split: '{'
              for part in split_text_curly
                  if part contains '}'
                      assign split_curly = part | split: '}'
                      assign styled_text = split_curly[0]
                      assign after_curly = split_curly[1]
                      assign final_text = final_text | append: '<span class="styled">' | append: styled_text | append: '</span>' | append: after_curly
                  else
                      assign final_text = final_text | append: part
                  endif
              endfor
            %}   
            <{{ section.settings.heading_tag }} class="product-labels__heading custom-heading product-labels__heading--{{ settings.typography_preset }} 
              {% if section.settings.color_type == 'default' and settings.accent_color_for_headings %} product-labels__heading--accent {% endif %} 
              {% if section.settings.heading_size != 'default' %}
                {{ section.settings.heading_size }}
              {% else %}
                {% if uppercase_font %} uppercase{% endif %}{% if bolder_font %} bolder-font{% endif %}
              {% endif %}"
            >
              {{ final_text }}
            </{{ section.settings.heading_tag }}>
          {% endif %}
      </div>
    {% endif %}

    <div class="mobile-grid-1 product-labels__container product-labels__container--{{ columns }} {% if collections_source_size == 1 %}border-none{% endif %}" 
      style="--icons_with_text-quantity: {{ columns }}" 
      data-count="{{ max_columns }}" 
      data-count-mobile="{{ mobileLayout }}"
    >
      {% if collections_source == 'collection_list_setting' %}
        {%- for collection in section.settings.collection_list -%}
          {% render 'featured-collection-card', collection: collection, id: forloop.index, is_first: forloop.first, index: forloop.index %}
        {% endfor %}
      {% elsif collections_source == 'blocks' %}
        {%- for block in section.blocks -%}
          {% render 'featured-collection-card', block: block, collection: block.settings.collection, id: block.id, is_first: forloop.first, index: forloop.index %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
{% endif %}

