              </div>
            {%- endif -%}
          {% elsif section.settings.align_with_heading == false %}
            {%- if section.settings.enable_filtering and collection.all_products_count > 1 -%}
              {{ 'component-facets.css' | asset_url | stylesheet_tag }}
              <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
            
              <div id="main-collection-filters" data-id="{{ section.id }}" {% if settings.navigation_layout == 'header_based' or section.settings.desktop_filter_style == 'horizontal' %}class="main-collection-filters--{{ section.settings.desktop_filter_style }}"{% endif %}>
                {% render 'facets', results: collection, enable_filtering: section.settings.enable_filtering, button_style: section.settings.filtering_style, total_products_heading_size: section.settings.total_products_heading_size %}
              </div>
            {%- endif -%}
          {% endif %}
            <div id="ProductGridContainer--{{  section.id }}" class="collection__grid-container">
              {%- paginate collection.products by section.settings.products_per_page -%}
