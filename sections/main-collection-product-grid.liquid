                    {{ 'sections.collection_template.no_products' | t }}<br>
                    {{ 'sections.collection_template.use_fewer_filters_html' | t: link: collection.url, class: "collection__no-products-link hover-opacity" }}
                  </h2>
                {%- else -%}
                  <div class="collection collection--{{ settings.white_space }} {% if settings.show_lines %} lines{% endif %}">
                      {%- liquid
                        assign alternative_grid = false
                        if section.settings.grid_type == 'alternative_1' or section.settings.grid_type == 'alternative_2'
                          assign alternative_grid = true
                        endif
                        if section.settings.grid_type == 'alternative_1'
                          assign repeat_interval = 8
                          assign large_positions = "1,6" | split: ","
                        elsif section.settings.grid_type == 'alternative_2'
                          assign repeat_interval = 12
                          assign large_positions = "2,4,8,12" | split: ","
                        endif
                      -%}
                      <ul id="product-grid--{{ section.id }}" data-id="{{ section.id }}" class="grid grid-container product-grid  product-grid--{{ section.settings.grid_type }} product-grid--{{ settings.white_space }} {% if settings.show_lines %} lines{% endif %} {% if section.settings.mobile_layout == '1' or collection.products.size == 1 %} one-column{% endif %}">
                        {%- for product in collection.products -%}
                          {%- liquid
                            if alternative_grid
                              assign big_card = false
                              assign forloop_index = forloop.index
                              if section.settings.grid_type == 'alternative_1'
                                assign position_in_pattern = forloop_index | modulo: repeat_interval
                                if position_in_pattern == 0
                                  assign position_in_pattern = repeat_interval
                                endif
                                if large_positions contains position_in_pattern
                                  assign big_card = true
                                endif
                              elsif section.settings.grid_type == 'alternative_2'
                                if forloop_index == 3
                                  assign big_card = true
                                elsif forloop_index > 3
                                  assign position_in_pattern = forloop_index | minus: 3
                                  assign position_in_pattern = position_in_pattern| modulo: repeat_interval
                                  if position_in_pattern == 0
                                    assign position_in_pattern = repeat_interval
                                  endif
                                  if large_positions contains position_in_pattern
                                    assign big_card = true
                                  endif
                                endif
                              endif
                            endif

                            assign lazy_load = false
                            if forloop.index > 2
                              assign lazy_load = true 
                            endif
                          -%}
                          <li class="grid__item">
                            {% render 'card-product',
                              card_product: product,
                              image_ratio: section.settings.image_ratio,
                              show_vendor: section.settings.show_vendor,
                              hover_behavior: section.settings.hover_behavior,
                              show_bullets: section.settings.show_bullets,
                              enable_quick_view: section.settings.enable_quick_view,
                              enable_add_to_cart: section.settings.enable_add_to_cart,
                              price_position: section.settings.price_position,
                              max_product_name_characters: section.settings.max_product_name_characters,
                              show_short_description: section.settings.show_short_description,
                              enable_color_pills: section.settings.enable_color_pills,
                              show_rating: section.settings.show_rating,
                              alternative_grid: alternative_grid,
                              big_card: big_card,
                              position_in_pattern: position_in_pattern,
                              forloop_index: forloop_index,
                              large_positions: large_positions,
                              repeat_interval: repeat_interval,
                              grid_style: section.settings.grid_type,
                              show_pickup_availability: section.settings.show_pickup_availability,
                              desktop_grid_item_width: desktop_grid_item_width,
                              mobile_grid_item_width: mobile_grid_item_width
                            %}
                          </li>
                        {%- endfor -%}
                      </ul>
                    {%- if paginate.pages > 1 -%}
                      {% render 'pagination', paginate: paginate, anchor: '', infinite_scroll: section.settings.infinite_scroll %}
                    {%- endif -%}
                  </div>
                {%- endif -%}
              {%- endpaginate -%}
            </div>
        </div>
        {% if section.settings.enable_filtering and collection.all_products_count > 1 and settings.navigation_layout == 'header_based' and section.settings.desktop_filter_style == 'vertical' %}
        </div>
        {% endif %}
      {% else %}
        <div class="collection__empty-grid {% if settings.center_text %}collection__empty-grid--center{% endif %} {% if settings.enable_buttons_zoom %}buttons-zoom{% endif %}">
          <p class="collection__empty-message subheading--{{ settings.typography_preset }} {% if section.settings.text_size != 'default' %}{{ section.settings.text_size }}{% else %}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_body_m %} uppercase{% endif %}{% if settings.bolder_font_body_m %} bolder-font{% endif %}{% endif %}{% endif %}">{{ 'sections.collection_template.empty' | t }}</p>
          <a class="collection__empty-link button--{{ settings.typography_preset }} solid-button {% if settings.typography_preset == 'custom' %}{% if settings.regular_button_size == 'default' %}button-font--default{% else %}{{ settings.regular_button_size }}{% endif %}{% endif %}" href="/{{ 'collections.page_title' | t }}">{{ 'sections.collection_template.link' | t }}</a>
        </div>
      {% endif %}
    </div>
  </div>

