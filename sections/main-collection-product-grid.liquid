{% liquid
  assign settings_page_width = settings.max_page_width | append: 'px'
  if settings.max_page_width == 'full_width'
    assign settings_page_width = '100vw'
  endif

  assign collection_description = false
  if section.settings.show_description and collection.description != blank
    assign collection_description = true
  endif

  case section.settings.grid_type
    when 'two_columns'
      assign desktop_grid_item_width = 2
    when 'three_columns'
      assign desktop_grid_item_width = 3
    when 'four_columns'
      assign desktop_grid_item_width = 4
    when 'alternative_1'
      assign desktop_grid_item_width = 3
    when 'alternative_2'
      assign desktop_grid_item_width = 4
    else
      assign desktop_grid_item_width = 2
  endcase

  case section.settings.mobile_layout
    when '1'
      assign mobile_grid_item_width = 1
    when '2'
      assign mobile_grid_item_width = 2
    else
      assign mobile_grid_item_width = 1
  endcase
%}

