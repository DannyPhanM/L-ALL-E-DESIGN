            {% if section.settings.show_description and collection.description != blank %}
              <div class="collection-hero__description subheading--{{ settings.typography_preset }} {% if section.settings.text_size != 'default' %}{{ section.settings.text_size }}{% else %}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_body_m %} uppercase{% endif %}{% if settings.bolder_font_body_m %} bolder-font{% endif %}{% endif %}{% endif %} rte">{{ collection.description }}</div>
            {% endif %}
            {%- if section.settings.enable_filtering and collection.all_products_count > 1 and section.settings.align_with_heading and collection_description == false and section.settings.desktop_filter_style == 'drawer' -%}
              {{ 'component-facets.css' | asset_url | stylesheet_tag }}
              <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
              <div id="main-collection-filters" data-id="{{ section.id }}" {% if settings.navigation_layout == 'header_based' or section.settings.desktop_filter_style == 'horizontal' %}class="main-collection-filters--{{ section.settings.desktop_filter_style }}"{% endif %}>
                {% render 'facets', results: collection, enable_filtering: section.settings.enable_filtering, button_style: section.settings.filtering_style, total_products_heading_size: section.settings.total_products_heading_size %}
              </div>
            {%- endif -%}
          </div>
          {% if section.settings.show_image and collection.image != blank %}
            <div class="collection-hero__image lazy-image-container {% if section.settings.show_image_under_heading %}collection-hero__image--under-heading{% endif %} ratio-{{ section.settings.banner_image_ratio }}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
              {% comment %} theme-check-disable ImgLazyLoading {% endcomment %}
              {% if settings.images_loading != 'disable' %}
                <figure class="lazy-image lazy-image--{{ settings.images_loading }}" style="--desktop-asp-rat: {{ collection.image.aspect_ratio }}">
              {% endif %}
              <img 
                  srcset="{%- if collection.image.width >= 165 -%}{{ collection.image | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if collection.image.width >= 375 -%}{{ collection.image | image_url: width: 375 }} 375w,{%- endif -%}
                  {%- if collection.image.width >= 550 -%}{{ collection.image | image_url: width: 550 }} 550w,{%- endif -%}
                  {%- if collection.image.width >= 750 -%}{{ collection.image | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if collection.image.width >= 1100 -%}{{ collection.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                  {%- if collection.image.width >= 1500 -%}{{ collection.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {%- if collection.image.width >= 1700 -%}{{ collection.image | image_url: width: 1700 }} 1700w,{%- endif -%}
                  {%- if collection.image.width >= 2200 -%}{{ collection.image | image_url: width: 2200 }} 2200w,{%- endif -%}
                  {%- if collection.image.width >= 3000 -%}{{ collection.image | image_url: width: 3000 }} 3000w,{%- endif -%}
                  {{ collection.image | image_url }} {{ collection.image.width }}w"
                  src="{{ collection.image | image_url: width: 1700 }}"
                  sizes="
                  (min-width: {{ settings_page_width }}) calc(({{ settings_page_width }} - 200px)),
                  (min-width: 750px) calc((100vw - 2rem)),
                  calc((100vw - 3rem))"
                  alt="{{ collection.title | escape }}"
                  {% if settings.images_loading != 'disable' %}
                    onload="this.parentNode.classList.add('lazyloaded');"
                    loading="lazy"
                  {% else %}
                    {% if section.index > 2 %}loading="lazy"{% endif %}
                  {% endif %}
                  draggable="false"
                  width="{{ collection.image.width }}"
                  height="{{ collection.image.height }}"
                  class="card__image"
                >
              {% if settings.images_loading != 'disable' %}
                {% if settings.images_loading != 'fade_scale' %}
                <div class="lazy-image__preloader lazy-image__preloader--full lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                  <img 
                  alt="{{ collection.image.alt | escape }}" 
                  src="{{ collection.image | image_url: width: 10 }}"
                  draggable="false"
                  width="10" 
                  height="10">
                </div>
                {% endif %}
