                                            sizes="(max-width: {{ default_mobile_size }}) calc(100vw * 2 / 3), (max-width: 920px) 50vw, (max-width: {{ mobile_size }}) calc(100vw * 2 / 3), (max-width: {{ tablet_size }}) 50vw, calc(100vw / 3)"
