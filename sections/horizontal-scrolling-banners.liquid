{% liquid
  assign view_section = false
  for block in section.blocks
    case block.type
        when 'media'
            if block.settings.image != blank or block.settings.video_load != blank
                assign view_section = true
                break
            endif
        when 'text'
            if block.settings.heading != blank or block.settings.subheading != blank or block.settings.text != blank or block.settings.number != blank or block.settings.button_label != blank
                assign view_section = true
                break
            endif
        when 'media_with_text'
            if block.settings.image != blank or block.settings.video_load != blank or block.settings.heading != blank or block.settings.subheading != blank or block.settings.text != blank or block.settings.number != blank or block.settings.button_label != blank
                assign view_section = true
                break
            endif
    endcase
  endfor
%}

{%- if request.design_mode or view_section  -%}

{{ 'section-horizontal-scrolling-banners.css' | asset_url | stylesheet_tag }}
{% liquid
    assign lazy_loading_images = false
    if section.index > 2 and settings.images_loading != 'disable'
    assign lazy_loading_images = true
    endif
    assign default_mobile_size = '768px'
    assign tablet_size = '1024px'
    assign mobile_size = '768px'
    if settings.navigation_layout == 'sidebar_based'
        if settings.white_space == 'spacious'
            if settings.sidebar_template == 'main_xs' or settings.sidebar_template == 'main_s'
                assign tablet_size = '1304px'
                assign mobile_size = '1048px'
            endif
            if settings.sidebar_template == 'main_xs_with_secondary' or settings.sidebar_template == 'main_s_with_secondary'
                assign tablet_size = '1400px'
                assign mobile_size = '1144px'
            endif
        else
            if settings.sidebar_template == 'main_xs'
                assign tablet_size = '1224px'
                assign mobile_size = '968px'
            endif
            if settings.sidebar_template == 'main_xs_with_secondary'
                assign tablet_size = '1320px'
                assign mobile_size = '1064px'
            endif
            if settings.sidebar_template == 'main_s'
                assign tablet_size = '1260px'
                assign mobile_size = '968px'
            endif
            if settings.sidebar_template == 'main_s_with_secondary'
                assign tablet_size = '1378px'
                assign mobile_size = '1064px'
            endif
        endif
        if settings.sidebar_template == 'main_m'
            assign tablet_size = '1365px'
            if settings.white_space == 'spacious'
                assign mobile_size = '1048px'
            else
                assign mobile_size = '1024px'
            endif
        endif
        if settings.sidebar_template == 'main_m_with_secondary'
            assign tablet_size = '1493px'
            assign mobile_size = '1152px'
        endif
        if settings.sidebar_template == 'main_l'
            assign tablet_size = '2048px'
            assign mobile_size = '1536px'
        endif
    endif
