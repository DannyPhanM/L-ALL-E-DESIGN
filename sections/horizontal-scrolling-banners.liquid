                            {% style %}
                                #shopify-section-{{ section.id }} .horizontal-banners__block--{{ block.id }} {
                                    --video-focal-point: {{ block.settings.video_focal_point }};
                                    --image-focal-point: {{ block.settings.image.presentation.focal_point }};
                                }
                            {% endstyle %}
                            <div class="horizontal-banners__media">
                                {%- if block.settings.video_load != blank -%}
                                    {% if settings.images_loading == 'disable' %}
