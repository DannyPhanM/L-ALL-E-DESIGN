{% if section.blocks.size > 0 %}
  <script src="{{ 'shoppable-media-slider.js' | asset_url }}" defer="defer"></script>
  {{ 'shoppable-media-slider.css' | asset_url | stylesheet_tag }}

  {% style %}
    #shopify-section-{{ section.id }} {
      --padding-top: {{ section.settings.desktop_padding_top }}px;
      --padding-bottom: {{ section.settings.desktop_padding_bottom }}px;

      {% if section.settings.color_type == 'invert' %}
      --layout-text-color:
        {{ settings.layout_background_color.red }},
        {{ settings.layout_background_color.green }},
        {{ settings.layout_background_color.blue }};
      --layout-background-color:
        {{ settings.layout_text_color.red }},
        {{ settings.layout_text_color.green }},
        {{ settings.layout_text_color.blue }};
      {% endif %}
      {% if section.settings.color_type == 'custom' %}
      --layout-text-color:
        {{ section.settings.text_color.red }},
        {{ section.settings.text_color.green }},
        {{ section.settings.text_color.blue }};
      --layout-background-color:
        {{ section.settings.background_color.red }},
        {{ section.settings.background_color.green }},
        {{ section.settings.background_color.blue }};
      {% endif %}

      background-color: rgb(var(--layout-background-color));
      color: rgb(var(--layout-text-color));

      {% if section.settings.media_radius == 'default' %}
        --media-radius: {{ settings.images_and_sections_radius }};
      {% else %}
        --media-radius: {{ section.settings.media_radius }};
      {% endif %}

      --focal-point: {{ section.settings.focal_point }};
    }

    @media screen and (max-width: 920px) {
      #shopify-section-{{ section.id }} {
        --padding-top: {{ section.settings.mobile_padding_top }}px;
        --padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      }
    }
  {% endstyle %}

  {%- liquid
    if settings.typography_preset == 'avant_garde'
      assign weight = settings.accent_icon_weight
      if settings.swap_fonts
        assign weight = settings.base_icon_weight
      endif
    else
      assign weight = settings.base_icon_weight
      if settings.swap_fonts
        assign weight = settings.accent_icon_weight
      endif
    endif
    if settings.typography_preset == 'custom'
      assign weight = settings.custom_icon_weight
    endif

    assign settings_page_width = settings.max_page_width | append: 'px'
    if settings.max_page_width == 'full_width'
      assign settings_page_width = '100vw'
    endif
  -%}

  <div
    class="
      shoppable-media-slider-section__container shoppable-media-slider-section__container--{{ settings.white_space }} color-{{ section.settings.color_type }} ordinal-section ordinal-section--{{ settings.white_space }} slider-container-js slider-section--{{ settings.white_space }} page-width--{{ settings.max_page_width }} 
      {%- if section.settings.color_type != 'default' %} no-default-color {% endif -%}
      {%- if settings.max_page_width == '1400' or settings.max_page_width == '1200' %} page-width {% endif -%}
    "
  >
    {% if section.settings.heading != blank %}
      {% liquid
        assign heading_text = section.settings.heading
        assign final_text = ''
        assign split_text_curly = heading_text | split: '{'
        for part in split_text_curly
            if part contains '}'
                assign split_curly = part | split: '}'
                assign styled_text = split_curly[0]
                assign after_curly = split_curly[1]
                assign final_text = final_text | append: '<span class="styled">' | append: styled_text | append: '</span>' | append: after_curly
            else
                assign final_text = final_text | append: part
            endif
        endfor
    %}
      <{{ section.settings.heading_tag }}
        class="
          slider__heading custom-headin slider__heading--{{ settings.typography_preset }} section-padding--{{ settings.white_space }}
          {% if section.settings.center_text %} text-align-center {% endif %}
          {% if settings.accent_color_for_headings %} slider__heading--accent {% endif %}
          {% if section.settings.heading_size != 'default' %}
            {{ section.settings.heading_size }}
          {% else %}
            {% if settings.typography_preset == 'custom' %}{% if settings.uppercase_heading_xs %} uppercase{% endif %}
            {% if settings.bolder_font_heading_xs %} bolder-font{% endif %}{% endif %}
          {% endif %}
        "
      >
        {{ final_text }}
      </{{ section.settings.heading_tag }}>
    {% endif %}

    <shoppable-media-slider class="shoppable-media-slider swiper" data-section-id="{{ section.id }}" data-muted="true" data-allow-video-autoplay="true" data-loop="{{ section.settings.center_slides }}">
      <ul class="shoppable-media-slider__wrapper swiper-wrapper">
        {%- for block in section.blocks -%}
          {% liquid
            assign is_visible_slide = false
            assign is_visible_caption = false

            if request.design_mode
              assign is_visible_slide = true
              assign is_visible_caption = true
            else
              assign has_media = false
              if block.settings.image != blank or block.settings.video != blank
                assign has_media = true
              endif

              case block.type
                when 'product'
                  if block.settings.product != blank and has_media
                    assign is_visible_slide = true
                  endif
                else
                  if has_media
                    assign is_visible_slide = true
                  endif
              endcase

              case block.type
                when 'product'
                  if block.settings.product != blank
                    assign is_visible_caption = true
                  endif
                when 'text'
                  if block.settings.number != blank or block.settings.title != blank or block.settings.text != blank
                    assign is_visible_caption = true
                  endif
              endcase
            endif

            assign media = nil
            if block.settings.video != blank 
              assign media = block.settings.video
            elsif block.settings.image != blank
              assign media = block.settings.image
            endif
          %}

          {% if is_visible_slide %}
            <li class="shoppable-media-slider__slide swiper-slide" {{ block.shopify_attributes }}>
              <div class="shoppable-media-slider__slide-main-content ratio-{{ section.settings.media_ratio }}" style="--media-focal-point: {{ media.presentation.focal_point | default: "center center" }};">            
                {%- if block.settings.video != blank -%}
                  {% if settings.images_loading == 'disable' %}
                    {{
                      block.settings.video
                      | video_tag:
                        image_size: '500x',
                        preload: 'none',
                        loop: true,
                        muted: true,
                        controls: false,
                        alt: block.settings.video.alt,
                        autoplay: true,
                        class: 'shoppable-media-slider__media none-autoplay'
                    }}
                  {% else %}
                    <figure
                      class="lazy-video lazy-image--{{ settings.images_loading }} ratio-{{ section.settings.media_ratio }}"
                      style="--desktop-asp-rat: {{ block.settings.video.aspect_ratio }}"
                    >
                      {{
                        block.settings.video
                        | video_tag:
                          preload: 'none',
                          loop: true,
                          muted: true,
                          controls: false,
                          autoplay: true,
                          image_size: '500x',
                          alt: block.settings.video.alt,
                          class: 'shoppable-media-slider__media none-autoplay',
                          oncanplay: 'this.parentNode.classList.add("lazyloaded");'
                      }}
                      {% if settings.images_loading != 'fade_scale' %}
                        <div
                          class="lazy-image__preloader lazy-image__preloader--full lazy-image__preloader-{{ settings.images_loading }}"
                          aria-hidden="true"
                        >
                          <img
                            alt="{{ block.settings.video.alt | escape }}"
                            src="{{ block.settings.video.preview_image | image_url: width: 10 }}"
                            draggable="false"
                            width="10"
                            height="10"
                          >
                        </div>
                      {% endif %}
                    </figure>
                  {% endif %}

                  {% if section.settings.enable_mute or section.settings.enable_pause %}
                    <div class="shoppable-media-slider__controls">
                      {% if section.settings.enable_mute %}
                        <button
                          class="shoppable-media-slider__control shoppable-media-slider__control--sound"
                          aria-label="{{ 'accessibility.unmute' | t }}"
                        >
                          <span class="shoppable-media-slider__control-icon shoppable-media-slider__control-icon--unmute">
                            {%- render 'icon', icon: 'unmute' -%}
                          </span>
                          <span class="shoppable-media-slider__control-icon shoppable-media-slider__control-icon--mute hidden">
                            {%- render 'icon', icon: 'mute' -%}
                          </span>
                        </button>
                      {% endif %}
                      {% if section.settings.enable_pause %}
                        <button
                          class="shoppable-media-slider__control shoppable-media-slider__control--playback"
                          aria-label="{{ 'accessibility.pause' | t }}"
                        >
                          <span class="shoppable-media-slider__control-icon shoppable-media-slider__control-icon--pause">
                            {%- render 'icon', icon: 'pause' -%}
                          </span>
                          <span class="shoppable-media-slider__control-icon shoppable-media-slider__control-icon--play hidden">
                            {%- render 'icon', icon: 'play' -%}
                          </span>
                        </button>
                      {% endif %}
                    </div>
                  {% endif %}
                {%- elsif block.settings.image != blank -%}
                  {% if settings.images_loading != 'disable' %}
                    <figure
                      class="lazy-image lazy-image--{{ settings.images_loading }}"
                      style="--desktop-asp-rat: {{ block.settings.image.aspect_ratio }}"
                    >
                  {% endif %}
                  <img
                    srcset="
                    {%- if block.settings.image.width >= 265 -%}{{ block.settings.image | image_url: width: 390 }} 265w,{%- endif -%}
                    {%- if block.settings.image.width >= 400 -%}{{ block.settings.image | image_url: width: 400 }} 400w,{%- endif -%}
                    {%- if block.settings.image.width >= 585 -%}{{ block.settings.image | image_url: width: 585 }} 585w,{%- endif -%}
                    {%- if block.settings.image.width >= 780 -%}{{ block.settings.image | image_url: width: 780 }} 780w{%- endif -%}
                    "
                    src="{{ block.settings.image | image_url: width: 780 }}"
                    sizes="(max-width: 768px) 400px, 585px"
                    alt="{{ block.settings.image.alt | escape }}"
                    {% if settings.images_loading != 'disable' %}
                      loading="lazy"
                      onload="this.parentNode.classList.add('lazyloaded');"
                    {% else %}
                      {% if section.index > 2 %}loading="lazy"{% endif %}
                    {% endif %}
                    draggable="false"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}"
                    class="shoppable-media-slider__media ratio-{{ section.settings.media_ratio }}"
                  >
                  {% if settings.images_loading != 'disable' %}
                    {% if settings.images_loading != 'fade_scale' %}
                      <div
                        class="lazy-image__preloader lazy-image__preloader--full lazy-image__preloader-{{ settings.images_loading }}"
                        aria-hidden="true"
                      >
                        <img
                          alt="{{ block.settings.image.alt | escape }}"
                          src="{{ block.settings.image | image_url: width: 10 }}"
                          draggable="false"
                          width="10"
                          height="10"
                        >
                      </div>
                    {% endif %}
                    </figure>
                  {% endif %}
                {%- elsif request.design_mode -%}
                  {% liquid
                    assign placeholder_index = forloop.index | modulo: 6 | plus: 1
                    assign placeholder_name = 'product-' | append: placeholder_index
                    assign ratio_class = 'ratio-' | append: section.settings.media_ratio
                    assign placeholder_classes = 'placeholder-svg shoppable-media-slider__media ' | append: ratio_class
                  %}

                  {{ placeholder_name | placeholder_svg_tag: placeholder_classes }}
                {%- endif -%}
              </div>

              {% if is_visible_caption %}
                {% case block.type %}
                  {% when 'product' %}
                    {% liquid
                      assign product = block.settings.product
                      assign product_form_id = 'quick-add-' | append: section.id | append: product.id

                      assign uppercase_price = false
                      assign bolder_price_font = false
                      if settings.typography_preset == 'custom' and settings.product_price_size == 'default'
                        if settings.uppercase_body_s
                          assign uppercase_price = true
                        endif
                        if settings.bolder_font_body_s
                          assign bolder_price_font = true
                        endif
                      endif

                      assign uppercase_title = false
                      assign bolder_title_font = false
                      if settings.typography_preset == 'custom' and settings.product_title_size == 'default'
                        if settings.uppercase_body_s
                          assign uppercase_title = true
                        endif
                        if settings.bolder_font_body_s
                          assign bolder_title_font = true
                        endif
                      endif

                      assign uppercase_text = false
                      assign bolder_text_font = false
                      if settings.typography_preset == 'custom' and settings.product_text_size == 'default'
                        if settings.uppercase_body_s
                          assign uppercase_text = true
                        endif
                        if settings.bolder_font_body_s
                          assign bolder_text_font = true
                        endif
                      endif

                      assign max_product_name_characters = section.settings.max_product_name_characters
                      assign truncatedCharacters = section.settings.max_product_name_characters | plus: 3
                    %}

                    <a href="{{ product.url }}" class="product-slide-caption shoppable-media-slider__slide-caption">
                      <div class="product-slide-caption__content">
                        <div
                          class="product-slide-caption__image lazy-image-container ratio-{{ section.settings.image_ratio }} {% if settings.enable_blending %} enable-blending{% endif %}"
                          {% if settings.disable_right_click %}
                            oncontextmenu="return false"
                          {% endif %}
                        >
                          {% if request.design_mode and product == blank %}
                            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                          {% elsif product.featured_image %}
                            {% if settings.images_loading != 'disable' %}
                              <figure
                                class="lazy-image lazy-image--{{ settings.images_loading }}"
                                style="--desktop-asp-rat: {{ product.featured_image.aspect_ratio }}"
                              >
                            {% endif %}
                            <img
                              srcset="{{ product.featured_image | image_url: width: 140 }} 1x, {{ product.featured_image | image_url: width: 280 }} 2x"
                              src="{{ product.featured_image | image_url: width: 140 }}"
                              alt="{{ product.featured_image.alt | escape | split: '#' | first }}"
                              width="{{ product.featured_image.width }}"
                              height="{{ product.featured_image.height }}"
                              loading="lazy"
                              {% if settings.images_loading != 'disable' %}
                                onload="this.parentNode.classList.add('lazyloaded');"
                              {% endif %}
                            >
                            {% if settings.images_loading != 'disable' %}
                              {% if settings.images_loading != 'fade_scale' %}
                                <div
                                  class="lazy-image__preloader lazy-image__preloader--full lazy-image__preloader-{{ settings.images_loading }}"
                                  aria-hidden="true"
                                >
                                  <img
                                    alt="{{ product.featured_image.alt | escape }}"
                                    src="{{ product.featured_image | image_url: width: 10 }}"
                                    draggable="false"
                                    width="10"
                                    height="10"
                                  >
                                </div>
                              {% endif %}
                              </figure>
                            {% endif %}
                          {% endif %}
                        </div>

                        <div class="product-slide-caption__info">
                          {% if section.settings.show_vendor %}
                            <p class="card__vendor card__vendor--{{ settings.typography_preset }}{% if settings.dim_text %} dim{% endif %}
                                {% if settings.typography_preset == 'custom' %}{% if settings.product_text_size != 'default' %} {{ settings.product_text_size }}{% else %}{% if uppercase_text %} uppercase{% endif %}{% if bolder_text_font %} bolder-font{% endif %}{% endif %}{% endif %}">
                              {% if request.design_mode and product == blank %}
                                {{ 'products.product.vendor_placeholder' | t }}
                              {% else %}
                                {{ 'products.product.by_vendor' | t -}}
                                {{- product.vendor }}
                              {% endif %}
                            </p>
                          {% endif %}

                          <div class="card__title card__title--{{ settings.typography_preset }} product-slide-caption__title {% if settings.typography_preset == 'custom' %}{% if settings.product_title_size != 'default' %}{{ settings.product_title_size }}{% else %}{% if uppercase_title %} uppercase{% endif %}{% if bolder_title_font %} bolder-font{% endif %}{% endif %}{% endif %}"
                            {% if max_product_name_characters > 0 %} data-name-characters="{{ max_product_name_characters }}"{% endif %}>
                            <p class="card__title-text card__title-js">
                              {% if request.design_mode and product == blank %}
                                {{ 'products.product.title_placeholder' | t }}
                              {% elsif max_product_name_characters != blank and max_product_name_characters > 0 %}
                                {{ product.title | escape | truncate: max_product_name_characters, '' -}}
                                {%- if max_product_name_characters < product.title.size %}...{% endif %}
                              {% elsif max_product_name_characters == null %}
                                {{ product.title | escape }}
                              {% endif %}
                            </p>
                          </div>

                          {% if section.settings.show_price %}
                            <div
                              class="
                                card__price card__price--{{ settings.typography_preset }}
                                {% if settings.typography_preset == 'custom' %}
                                  {% if settings.product_price_size != 'default' %}
                                   {{ settings.product_price_size }}
                                  {% else %}
                                    {% if uppercase_price %} uppercase{% endif %}
                                    {% if bolder_price_font %} bolder-font{% endif %}
                                  {% endif %}
                                {% endif %}
                              "
                            >
                              {% if request.design_mode and product == blank %}
                                {% render 'price',
                                  in_card_product: true,
                                  uppercase_price: uppercase_price,
                                  bolder_price_font: bolder_price_font
                                %}
                              {% else %}
                                {% render 'price',
                                  product: product,
                                  in_card_product: true,
                                  uppercase_price: uppercase_price,
                                  bolder_price_font: bolder_price_font
                                %}
                              {% endif %}
                            </div>
                          {% endif %}
                        </div>
                      </div>

                      {% if section.settings.enable_add_to_cart_button
                        and settings.disable_shopping_functionality == false
                      %}
                        {% liquid
                          assign product_has_variants = true
                          if product.variants.size < 2
                            assign product_has_variants = false
                          endif
                        %}

                        {% capture cart_icon %}
                          {% if settings.cart_name == 'basket' %}
                            {% if weight == 'regular' %}
                              {% render 'icon', icon: 'basket-regular' %}
                            {% elsif weight == 'medium' %}
                              {% render 'icon', icon: 'basket-medium' %}
                            {% elsif weight == 'bold' %}
                              {% render 'icon', icon: 'basket-bold' %}
                            {% endif %}
                          {% elsif settings.cart_name == 'cart' %}
                            {% if weight == 'regular' %}
                              {% render 'icon', icon: 'cart-regular' %}
                            {% elsif weight == 'medium' %}
                              {% render 'icon', icon: 'cart-medium' %}
                            {% elsif weight == 'bold' %}
                              {% render 'icon', icon: 'cart-bold' %}
                            {% endif %}
                          {% elsif settings.cart_name == 'bag' %}
                            {% if weight == 'regular' %}
                              {% render 'icon-accordion-2', icon: 'bag-regular' %}
                            {% elsif weight == 'medium' %}
                              {% render 'icon-accordion-2', icon: 'bag-medium' %}
                            {% elsif weight == 'bold' %}
                              {% render 'icon-accordion-2', icon: 'bag-bold' %}
                            {% endif %}
                          {% endif %}
                        {% endcapture %}

                        {% capture add_to_cart_button %}
                          <button
                            {% if product_has_variants  %} 
                              id="{{ product_form_id }}-submit" 
                            {% endif %}
                            type="submit"
                            name="add"
                            class="product-slide-caption__add-to-cart-button quick"
                            {% unless product.available %}
                              disabled
                            {% endunless %}
                            aria-label="{% if settings.cart_name == 'cart' %}{{ 'sections.cart.quick_add_to_cart' | t }}{% elsif settings.cart_name == 'bag' %}{{ 'sections.cart.quick_add_to_bag' | t }}{% else %}{{ 'sections.cart.quick_add_to_basket' | t }}{% endif %}"
                          >
                            {{ cart_icon }}
                          </button>                     
                        {% endcapture %}

                        {% if product_has_variants %}
                          <quick-view-button
                            class="button button--small"
                            data-product-url="{{ product.url | within: product.collection }}"
                            data-product-variant-url="{{ product.selected_or_first_available_variant.url }}"
                          >
                            {{ add_to_cart_button }}
                          </quick-view-button>
                        {% else %}
                          <add-to-cart
                            data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                            class="{% if settings.action_after_adding == 'cart_drawer' %}cart-drawer{% elsif settings.action_after_adding == 'success' %}cart-notification{% endif %}"
                          >
                            {{ add_to_cart_button }}
                          </add-to-cart>
                        {% endif %}
                      {% endif %}
                    </a>
                  {% when 'text' %}
                    {% liquid
                      assign uppercase_title = false
                      assign bolder_title = false
                      if settings.typography_preset == 'custom' and block.settings.title_size == 'default'
                        if settings.uppercase_body_s
                          assign uppercase_title = true
                        endif
                        if settings.bolder_font_body_s
                          assign bolder_title = true
                        endif
                      endif

                      assign uppercase_text = false
                      assign bolder_text = false
                      if settings.typography_preset == 'custom' and block.settings.text_size == 'default'
                        if settings.uppercase_body_m
                          assign uppercase_text = true
                        endif
                        if settings.bolder_font_body_m
                          assign bolder_text = true
                        endif
                      endif
                    %}

                    <article class="text-slide-caption shoppable-media-slider__slide-caption">
                      {% if block.settings.number != 0 %}
                        <div class="text-slide-caption__number">{{ block.settings.number }}</div>
                      {% endif %}

                      {% if block.settings.title != blank %}
                        <p class="text-slide-caption__title text-slide-caption__title--{{ settings.typography_preset }}{% if block.settings.title_size != 'default' %} {{ block.settings.title_size }}{% else %}{% if uppercase_title %} uppercase{% endif %}{% if bolder_title %} bolder-font{% endif %}{% endif %}">
                          {{ block.settings.title }}
                        </p>
                      {% endif %}

                      {% if block.settings.text != blank %}
                        <div class="text-slide-caption__text text-slide-caption__text--{{ settings.typography_preset }} richtext{% if settings.enable_animated_underline %} richtext-link--underline {% endif %}
                            {% if block.settings.text_size != 'default' %} {{ block.settings.text_size }}{% else %}{% if uppercase_text %} uppercase{% endif %}{% if bolder_text %} bolder-font{% endif %}{% endif %}">
                          <object>
                            {{ block.settings.text }}
                          </object>
                        </div>
                      {% endif %}
                    </article>
                {% endcase %}
              {% endif %}
            </li>
          {% endif %}
        {%- endfor -%}
      </ul>

      <div class="shoppable-media-slider__button-prev swiper-button-prev">
        {% if weight == 'regular' %}
          {% render 'icon', icon: 'dropdown-chevron-left-regular' %}
        {% elsif weight == 'medium' %}
          {% render 'icon', icon: 'dropdown-chevron-left-medium' %}
        {% elsif weight == 'bold' %}
          {% render 'icon', icon: 'dropdown-chevron-left-bold' %}
        {% endif %}
      </div>
      <div class="shoppable-media-slider__button-next swiper-button-next">
        {% if weight == 'regular' %}
          {% render 'icon', icon: 'dropdown-chevron-regular' %}
        {% elsif weight == 'medium' %}
          {% render 'icon', icon: 'dropdown-chevron-medium' %}
        {% elsif weight == 'bold' %}
          {% render 'icon', icon: 'dropdown-chevron-bold' %}
        {% endif %}
      </div>
    </shoppable-media-slider>
  </div>
{% endif %}

{% schema %}
{
  "name": "t:sections.shoppable-media-slider.name",
  "tag": "section",
  "class": "shoppable-media-slider-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.all.labels.heading.label",
      "info": "t:sections.all.labels.heading.info"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:sections.all.size.heading_size.label",
      "options": [
        {
          "value": "default",
          "label": "t:sections.all.size.options__1.label"
        },
        {
          "value": "heading_xl",
          "label": "t:sections.all.size.options__2.label"
        },
        {
          "value": "heading_xl_uppercase",
          "label": "t:sections.all.size.options__3.label"
        },
        {
          "value": "heading_l",
          "label": "t:sections.all.size.options__4.label"
        },
        {
          "value": "heading_l_uppercase",
          "label": "t:sections.all.size.options__5.label"
        },
        {
          "value": "heading_m",
          "label": "t:sections.all.size.options__6.label"
        },
        {
          "value": "heading_m_uppercase",
          "label": "t:sections.all.size.options__7.label"
