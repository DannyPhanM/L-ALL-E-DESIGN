                        {{ 'section-main-page.css' | asset_url | stylesheet_tag }}
                        {{ 'component-rte.css' | asset_url | stylesheet_tag }}
                        {{ block.settings.page.content }}
                    </div>
                {% endif %}
            </div>
        {%- endfor -%}
    </div>
</div>
{% endif %}

<script>

  (function () {
    const section = document.querySelector('#shopify-section-{{ section.id }}');
    if (!section) return;
    const tabsContainer = section.querySelector('.tabs-container-js');
    if (!tabsContainer) return;

    const tabs = tabsContainer.querySelectorAll('.section-tab-js');
    const contents = tabsContainer.querySelectorAll('.tab-content-js');
    if (!tabs.length || !contents.length) return;

    const currentPath = window.location.pathname.replace(/\/$/, ""); 
    let targetIndex = -1;

    // 1. Auto-activate based on URL path
    tabs.forEach((tab, index) => {
      const autoPath = tab.getAttribute('data-auto-path');
      if (autoPath) {
        let normalizedAutoPath = autoPath.trim().replace(/\/$/, "");
        if (!normalizedAutoPath.startsWith('/')) normalizedAutoPath = '/' + normalizedAutoPath;
        
        if (currentPath === normalizedAutoPath || currentPath.endsWith(normalizedAutoPath)) {
          targetIndex = index;
        }
      }
    });

    const activateTab = (index) => {
      tabs.forEach((tab, i) => {
        tab.classList.toggle('active', i === index);
        tab.setAttribute('aria-selected', i === index ? 'true' : 'false');
      });
      contents.forEach((content, i) => {
        content.classList.toggle('active', i === index);
      });
    };

    if (targetIndex !== -1) {
      activateTab(targetIndex);
    }

    // 2. Handle manual clicks
    tabs.forEach((tab, index) => {
      tab.addEventListener('click', (e) => {
        const autoPath = tab.getAttribute('data-auto-path');
        if (autoPath) {
           e.preventDefault();
           let normalizedPath = autoPath.trim();
           if (!normalizedPath.startsWith('/')) normalizedPath = '/' + normalizedPath;
           window.location.href = normalizedPath;
        } else {
           e.preventDefault();
           activateTab(index);
        }
      });
    });
  })()


</script>

