{%- liquid
    assign accent_price = false
    if settings.bolder_product_price 
        assign accent_price = true
    endif
    if settings.small_bolder_product_price 
        assign accent_price = true
    endif
    assign use_accent_color_for_price = false
    if settings.use_accent_color_for_price 
        assign use_accent_color_for_price = true
    elsif settings.small_use_accent_color_for_price
        assign use_accent_color_for_price = true
    endif
    assign use_sale_color_for_new_price = false
    if settings.small_use_sale_color_for_new_price
        assign use_sale_color_for_new_price = true
    elsif settings.small_use_sale_color_for_new_price 
        assign use_sale_color_for_new_price = true
    endif

    if settings.typography_preset == 'avant_garde'
      assign close_weight = settings.accent_icon_weight
      if settings.swap_fonts
              assign close_weight = settings.base_icon_weight
      endif
    else
      assign close_weight =  settings.base_icon_weight
      if settings.swap_fonts
              assign close_weight = settings.accent_icon_weight
      endif
    endif
    if settings.typography_preset == 'custom'
        assign close_weight = settings.custom_icon_weight
    endif
-%}

{% style %}
  #shopify-section-{{ section.id }} {
    --padding-top: {{ section.settings.desktop_padding_top }}px;
    --padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
    --text-alignment: {% if section.settings.center_text %}center{% else %}flex-start{% endif %};
    --thumbnails-image-radius: 2000px;
    --thumbnails-outline-thickness: {{ section.settings.thumbnails_border_width }}px;
    --thumbnail-width: {{ section.settings.thumbnails_width }}px;
    --gap: {{ section.settings.desktop_gap }}px;
    {% if section.settings.thumbnail_border_gradient != empty %}
      --thumbnail-border-gradient: {% if section.settings.thumbnail_border_gradient == blank %}{{ section.settings.thumbnail_border_color | color_to_rgb | strip }}{% else %}{{ section.settings.thumbnail_border_gradient }}{% endif %};
    {% else %}
      --thumbnail-border-gradient: {{ section.settings.thumbnail_border_color | color_to_rgb | strip }};
    {% endif %}

    {% if section.settings.color_type == 'invert' %}
          --layout-text-color:
          {{ settings.layout_background_color.red }},
          {{ settings.layout_background_color.green }},
          {{ settings.layout_background_color.blue }};
          --layout-background-color:
          {{ settings.layout_text_color.red }},
          {{ settings.layout_text_color.green }}, 
          {{ settings.layout_text_color.blue }};
    {% endif %}
    {% if section.settings.color_type == 'custom' %}
        --layout-text-color:
        {{ section.settings.text_color.red }},
        {{ section.settings.text_color.green }}, 
        {{ section.settings.text_color.blue }};
        --layout-background-color:
        {{ section.settings.background_color.red }},
        {{ section.settings.background_color.green }}, 
        {{ section.settings.background_color.blue }};
    {% endif %}
      background-color: rgb(var(--layout-background-color));
      color: rgb(var(--layout-text-color));
  }
   @media screen and (max-width: 920px) {
      #shopify-section-{{ section.id }} {
        --padding-top: {{ section.settings.mobile_padding_top }}px;
        --padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      }
    }
  @media screen and (max-width: 768px) {
        #shopify-section-{{ section.id }} {
            --thumbnail-width: {{ section.settings.mobile_thumbnails_width }}px;
            --gap: {{ section.settings.mobile_gap }}px;
        }
    }
{% endstyle %}

<div class="section ordinal-section ordinal-section--{{ settings.white_space }} section-padding--{{ settings.white_space }} {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }} color-{{ section.settings.color_type }} {% if section.settings.color_type != 'default' %}no-default-color{% endif %}">
    <div class="section-container">
        <div class="section-stories__wrapper section-stories__wrapper--{{ settings.white_space }}">
          {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
            <div class="section-header" {% if section.settings.center_text %}style="text-align: center;"{% endif %}>
                {%- if section.settings.subheading != blank -%}
                    {% liquid
                        assign uppercase_font = false
                        assign bolder_font = false
                        if settings.typography_preset == 'custom' and section.settings.subheading_size == 'default'
                        if settings.uppercase_label
                            assign uppercase_font = true
                        endif
                        if settings.bolder_font_label
                            assign bolder_font = true
                        endif
                        endif
                    %} 
                    <{{ section.settings.subheading_tag }} class="content-subheading{% if uppercase_font %} uppercase{% endif %}{% if bolder_font %} bolder-font{% endif %} content-subheading--{{ settings.typography_preset }} {% if section.settings.subheading_size != 'default' %}{{ section.settings.subheading_size }}{% endif %} {% if settings.dim_text %}dim{% endif %}">
                        {{ section.settings.subheading }}
                    </{{ section.settings.subheading_tag }}>
                {%- endif -%}
                {%- if section.settings.heading != blank -%}
                    {% liquid
                        assign uppercase_font = false
                        assign bolder_font = false
                        if settings.typography_preset == 'custom' and section.settings.heading_size == 'default'
                        if settings.uppercase_heading_xs
                            assign uppercase_font = true
                        endif
                        if settings.bolder_font_heading_xs
                            assign bolder_font = true
                        endif
                        endif

                        assign heading_text = section.settings.heading
                        assign final_text = ''
                        assign split_text_curly = heading_text | split: '{'
                        for part in split_text_curly
                            if part contains '}'
                                assign split_curly = part | split: '}'
                                assign styled_text = split_curly[0]
                                assign after_curly = split_curly[1]
                                assign final_text = final_text | append: '<span class="styled">' | append: styled_text | append: '</span>' | append: after_curly
                            else
                                assign final_text = final_text | append: part
                            endif
                        endfor
                    %} 
                    <{{ section.settings.heading_tag }} class="content-heading custom-heading{% if uppercase_font %} uppercase{% endif %}{% if bolder_font %} bolder-font{% endif %} {% if section.settings.color_type == 'default' and settings.accent_color_for_headings %}content-heading--accent{% endif %} content-heading--{{ settings.typography_preset }} {% if section.settings.heading_size != 'default' %}{{ section.settings.heading_size }}{% endif %}">
                      {{ final_text }}
                    </{{ section.settings.heading_tag }}>
                {%- endif -%}
            </div>
          {%- endif -%}
          <stories-slideshow data-autoplay-speed="{{ section.settings.story_autoplay_speed | times: 1000 }}" data-section-id="{{ section.id }}" style="--active-slide-duration: {{ section.settings.story_autoplay_speed }}s;"
              class="stories-slideshow">
              <div class="stories-slideshow__thumbnails-wrapper">
                  <div class="stories-slideshow__thumbnails hide-scrollbar flex--row">
                      {%- for block in section.blocks -%}
                          {% liquid
                          assign total_slides = 0
                          if block.settings.image_1 != blank
                              assign total_slides = total_slides | plus: 1
                          endif
                          if block.settings.image_2 != blank
                              assign total_slides = total_slides | plus: 1
                          endif
                          if block.settings.image_3 != blank
                              assign total_slides = total_slides | plus: 1
                          endif
                          if block.settings.image_4 != blank
                              assign total_slides = total_slides | plus: 1
                          endif
                          if block.settings.image_5 != blank
                              assign total_slides = total_slides | plus: 1
                          endif
                          if block.settings.image_6 != blank
                              assign total_slides = total_slides | plus: 1
                          endif
                          if block.settings.image_7 != blank
                              assign total_slides = total_slides | plus: 1
                          endif
                          if block.settings.image_8 != blank
                              assign total_slides = total_slides | plus: 1
                          endif
                          %}
                          {%- if block.settings.thumbnail_image != blank or request.design_mode -%}
                          <button class="stories-slideshow__thumbnail {% if total_slides == 0 %} events-none{% endif %}" data-thumbnail-id="{{ block.id }}" {{ block.shopify_attributes }}>
                              <div class="stories-slideshow__circle-wrapper ratio-square">
                                  <div class="stories-slideshow__circle ratio-square"{% if settings.disable_right_click %} oncontextmenu="return false"{% endif %}>
                                      {% if block.settings.thumbnail_image != blank %}
                                          {%- liquid
                                              assign widths = '150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250'
                                              assign img_class = "stories-slideshow__thumbnail-image"
                                          -%}
                                          {%- capture sizes -%}
                                              (max-width: 768px) clamp(100vw, {{ section.settings.mobile_thumbnails_width }}px, 100vw), {{ section.settings.thumbnails_width }}px
                                          {%- endcapture -%}
                                          {{
                                              block.settings.thumbnail_image
                                              | image_url: width: 1500
                                              | image_tag:
                                              sizes: sizes,
                                              widths: widths,
                                              class: img_class,
                                              alt: block.settings.thumbnail_image.alt,
                                              draggable: false
                                          }}
                                      {% else %}
                                          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                      {% endif %}
                                  </div>
                              </div>
                              {% if block.settings.title != blank %}
                                  <div class="stories-slideshow__title stories-slideshow__title--{{ settings.typography_preset }} {% if section.settings.title_size != 'default' %}{{ section.settings.title_size }}{% endif %}">
                                      {{ block.settings.title }}
                                  </div>
                              {% endif %}
                          </button>
                          {%- endif -%}
                      {%- endfor -%}
                  </div>
              </div>
              <div class="stories-slideshow__stories">
                  <div class="stories-slider visually-hidden color-default">
                    {% style %}
