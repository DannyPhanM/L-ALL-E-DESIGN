{% style %}
  #shopify-section-{{ section.id }} {
    --padding-top: 0px;
    --padding-bottom: 0px;
  }
  .section-apps .app:not(:first-child) {
    margin-top: 0px;
  }
{% endstyle %}

<div class="none-autoplay app {% if section.settings.include_margins %}ordinal-section ordinal-section--{{ settings.white_space }} section-padding--{{ settings.white_space }} {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}{% endif %}">
    {%- for block in section.blocks -%}
      {% render block %}
    {%- endfor -%}
  </div>
  
  {% schema %}
  {
    "name": "t:sections.apps.name",
    "tag": "section",
    "class": "section-apps",
    "settings": [
      {
        "type": "checkbox",
        "id": "include_margins",
        "default": true,
        "label": "t:sections.apps.settings.include_margins.label"
      }
    ],
    "blocks": [
      {
        "type": "@app"
      }
    ],
    "presets": [
      {
        "name": "t:sections.apps.presets.name"
      }
    ]
  }
  {% endschema %}