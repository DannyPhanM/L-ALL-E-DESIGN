{{ 'section-blog-post.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}
{{ 'component-share.css' | asset_url | stylesheet_tag }}
{{ 'section-image-grid.css' | asset_url | stylesheet_tag }}
{{ 'section-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

<script src="{{ 'product-modal.js' | asset_url }}" defer="defer"></script>

{% style %}
  #shopify-section-{{ section.id }} {
    --padding-top: {{ section.settings.desktop_padding_top }}px;
    --padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
  }

  @media screen and (max-width: 920px) {
    #shopify-section-{{ section.id }} {
      --padding-top: {{ section.settings.mobile_padding_top }}px;
      --padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }
  }
{% endstyle %}

{%- liquid 
  if settings.typography_preset == 'avant_garde'
    assign weight = settings.accent_icon_weight
    if settings.swap_fonts
      assign weight = settings.base_icon_weight
    endif
  else 
    assign weight =  settings.base_icon_weight
    if settings.swap_fonts
      assign weight = settings.accent_icon_weight
    endif
  endif

  if settings.typography_preset == 'avant_garde' or settings.typography_preset == 'duet'
        assign weight_accordion_title = settings.accent_icon_weight
        if settings.swap_fonts
            assign weight_accordion_title = settings.base_icon_weight
        endif
      else 
        assign weight_accordion_title =  settings.base_icon_weight
        if settings.swap_fonts
            assign weight_accordion_title = settings.accent_icon_weight
        endif
  endif
  assign uppercase_font = false
  assign bolder_font = false
  assign uppercase_body_m = false
  assign bolder_body_m = false
  assign uppercase_label = false
  assign bolder_label = false
  if settings.typography_preset == 'custom'
    assign weight = settings.custom_icon_weight
    assign weight_accordion_title = settings.custom_icon_weight
    if settings.uppercase_body_s
      assign uppercase_font = true
    endif
    if settings.bolder_font_body_s
      assign bolder_font = true
    endif
    if settings.uppercase_body_m
      assign uppercase_body_m = true
    endif
    if settings.bolder_font_body_m
      assign bolder_body_m = true
    endif
    if settings.uppercase_label
      assign uppercase_label = true
    endif
    if settings.bolder_font_label
      assign bolder_label = true
    endif
  endif
-%}

{% liquid
  assign settings_page_width = settings.max_page_width | append: 'px'
  if settings.max_page_width == 'full_width'
    assign settings_page_width = '100vw'
  endif
%}

<div class="blog-post ordinal-section ordinal-section--{{ settings.white_space }} {% if settings.show_lines %}ordinal-section--lines{% endif %}  "> 
  <article class="article-template" itemscope itemtype="http://schema.org/BlogPosting">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'breadcrumbs' -%}
          <div class="{% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}  section-padding--{{ settings.white_space }}" >
            {%- render 'breadcrumbs', object: block -%}
          </div>
        {%- when 'featured_image'-%}
          {%- if article.image -%}
            <div class="article-template__image-block article-template__image-block--{{ block.settings.image_width }} {% if block.settings.image_width != 'full_width' %}{% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}  section-padding--{{ settings.white_space }}{% endif %}" style="{% if block.settings.context_image_radius == 'default' %}--context-image-radius: {{ settings.images_and_sections_radius }};{% else %}--context-image-radius: {{ block.settings.context_image_radius }};{% endif %}" {{ block.shopify_attributes }}>
              <div class="article-template__image article-template__image--{{ block.settings.image_ratio }} lazy-image-container ratio-{{ block.settings.image_ratio }}"
                itemprop="image" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
                {% comment %} theme-check-disable ImgLazyLoading {% endcomment %}
                {% if settings.images_loading != 'disable' %}
                  <figure class="lazy-image lazy-image--{{ settings.images_loading }}" style="--desktop-asp-rat: {{ article.image.aspect_ratio }}">
                {% endif %}
                <img
                  srcset="{% if article.image.width >= 350 %}{{ article.image | image_url: width: 350 }} 350w,{% endif %}
                    {% if article.image.width >= 750 %}{{ article.image | image_url: width: 750 }} 750w,{% endif %}
                    {% if article.image.width >= 1100 %}{{ article.image | image_url: width: 1100 }} 1100w,{% endif %}
                    {% if article.image.width >= 1500 %}{{ article.image | image_url: width: 1500 }} 1500w,{% endif %}
                    {% if article.image.width >= 2200 %}{{ article.image | image_url: width: 2200 }} 2200w,{% endif %}
                    {% if article.image.width >= 3000 %}{{ article.image | image_url: width: 3000 }} 3000w,{% endif %}
                    {{ article.image | image_url }} {{ article.image.width }}w"
                  sizes="(min-width: {{ settings_page_width }}) calc({{ settings_page_width }} - 100px), (min-width: 750px) calc(100vw - 10rem), 100vw"
                  src="{{ article.image | image_url: width: 1100 }}"
                  {% if settings.images_loading != 'disable' %}
                    onload="this.parentNode.classList.add('lazyloaded');"
                    loading="lazy"
                  {% else %}
                    {% if section.index > 2 or forloop.index > 10 %}loading="lazy"{% endif %}
                  {% endif %}
                  draggable="false"
                  width="{{ article.image.width }}"
                  height="{{ article.image.height }}"
                  alt="{{ article.image.alt | escape }}"
                  style=" --focal-point: {{ block.settings.focal_point }};">
                {% if settings.images_loading != 'disable' %}
                  {% if settings.images_loading != 'fade_scale' %}
                  <div class="lazy-image__preloader lazy-image__preloader--full lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                    <img 
                    alt="{{ article.image.alt | escape }}" 
                    src="{{ article.image | image_url: width: 10 }}"
                    draggable="false"
                    width="10" 
                    height="10">
                  </div>
                  {% endif %}
              </figure>
              {% endif %}
                {% comment %} theme-check-enable ImgLazyLoading {% endcomment %}
              </div>
            </div>
          {%- endif -%}

          {%- when 'title'-%}
            {% liquid
              assign uppercase_title = false
              assign bolder_title = false
              if settings.typography_preset == 'custom' and block.settings.title_size == 'default'
                if settings.uppercase_heading_m
                  assign uppercase_title = true
                endif
                if settings.bolder_font_heading_m
                  assign bolder_title = true
                endif
              endif
            %}
            <div class="{% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}  section-padding--{{ settings.white_space }}" {{ block.shopify_attributes }}>
              <div class="title-block {{ section.settings.section_width }}">
                <h1 class="article__title {% if settings.accent_color_for_headings %}article__title--accent{% endif %} article__title--{{ settings.typography_preset }} {% if block.settings.title_size != 'default' %}{{ block.settings.title_size }}{% endif %}{% if uppercase_title %} uppercase{% endif %}{% if bolder_title %} bolder-font{% endif %}" itemprop="headline">{{ article.title | escape }}</h1>
                {%- if block.settings.show_date or block.settings.show_author or block.settings.show_number_of_comments and article.comments_count > 0 and blog.comments_enabled? -%}
                  {% liquid
                    assign uppercase_subheading = false
                    assign bolder_subheading = false
                    if settings.typography_preset == 'custom' and block.settings.subheading_size == 'default'
                      if settings.uppercase_heading_m
                        assign uppercase_subheading = true
                      endif
                      if settings.bolder_font_heading_m
                        assign bolder_subheading = true
                      endif
                    endif
                  %}
                <div class="article-card__item info info--{{ settings.typography_preset }} {% if block.settings.subheading_size != 'default' %}{{ block.settings.subheading_size }}{% endif %}{% if uppercase_subheading %} uppercase{% endif %}{% if bolder_subheading %} bolder-font{% endif %} {% if settings.dim_text %}dim{% endif %}"{{ block.shopify_attributes }}>
                  {%- if block.settings.show_date -%}
                      <span class="info__date">
                      {{- article.published_at | date: format: 'abbreviated_date' -}}
                      </span>
                  {%- endif -%}
                  {%- if block.settings.show_author -%}
                      <span class="info__author">{{ article.author }}</span>
                  {%- endif -%}
                  {%- if block.settings.show_number_of_comments and article.comments_count > 0 and blog.comments_enabled? -%}
                      <span class="info__comments-count">{% if article.comments_count == 1 %}{{ 'blogs.article.comments.one' | t: count: article.comments_count }}{% else %}{{ 'blogs.article.comments.other' | t: count: article.comments_count }}{% endif %}</span>
                  {%- endif -%}
                </div>
              {%- endif -%}
              </div>
            </div>
          {%- when 'content'-%}
            {%- if article.content.size > 0 -%}
              {% liquid
                assign uppercase_font_text = false
                assign bolder_font_text = false
                if settings.typography_preset == 'custom' and block.settings.text_size == 'default'
                  if settings.uppercase_body_m
                    assign uppercase_font_text = true
                  endif
                  if settings.bolder_font_body_m
                    assign bolder_font_text = true
                  endif
                endif
              %} 

              <div class="content-block page-width--{{ settings.max_page_width }} section-padding--{{ settings.white_space }}
                  {%- if settings.max_page_width == '1400' or settings.max_page_width == '1200' %} page-width {% endif -%}"
                itemprop="articleBody" 
                {{ block.shopify_attributes }}
              >
                <div class="article__content {{ section.settings.section_width }} rte body-text--{{ settings.typography_preset }}
                  {% if settings.show_lines %} article__content--lines {% endif %}
                  {% if uppercase_font_text %} uppercase{% endif %}
                  {% if bolder_font_text %} bolder-font{% endif %}
                  {% if block.settings.text_size != 'default' %} {{ block.settings.text_size }}{% endif %}"
                >  
                  {{ article.content }}
                </div>
              </div>
            {%- endif -%}
          {%- when 'excerpt'-%}
            {%- if article.excerpt.size > 0 -%}
              {% liquid
                assign uppercase_font_text = false
                assign bolder_font_text = false
                if settings.typography_preset == 'custom' and block.settings.text_size == 'default'
                  if settings.uppercase_body_m
                    assign uppercase_font_text = true
                  endif
                  if settings.bolder_font_body_m
                    assign bolder_font_text = true
                  endif
                endif
              %} 
              <div class="{% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}  section-padding--{{ settings.white_space }}" itemprop="articleBody" {{ block.shopify_attributes }}>
                <div class="article__excerpt body-text--{{ settings.typography_preset }}{% if uppercase_font_text %} uppercase{% endif %}{% if bolder_font_text %} bolder-font{% endif %}{% if block.settings.text_size != 'default' %} {{ block.settings.text_size }}{% endif %} {{ section.settings.section_width }} rte">  
                  {{ article.excerpt }}
                </div>
              </div>
            {%- endif -%}
          {%- when 'share' -%}
            <div class="share {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}  section-padding--{{ settings.white_space }}" {{ block.shopify_attributes }}>
              {% style %}
                .share--icon  {
                  height: {{ 24 | times: settings.desktop_font_scale | divided_by: 100.0 | round | at_least: 24 }}px;
                }
                .heading_s .share--icon,
                .heading_s_uppercase .share--icon {
                  height: {{ 46 | times: settings.desktop_font_scale | divided_by: 100.0 | round | at_least: 16 | at_most: 128 }}px;
                }
                .heading_xs .share--icon,
                .heading_xs_uppercase .share--icon {
                  height: {{ 36 | times: settings.desktop_font_scale | divided_by: 100.0 | round | at_least: 16 | at_most: 128 }}px;
                }
                .body_l .share--icon,
                .body_l_uppercase .share--icon {
                    height: {{ 28 | times: settings.desktop_font_scale | divided_by: 100.0 | round | at_least: 16 }}px;
                }
                .body_m .share--icon,
                .body_m_uppercase .share--icon {
                    height: {{ 26 | times: settings.desktop_font_scale | divided_by: 100.0 | round | at_least: 16 }}px;
                }
                .label_font .share--icon,
                .label_font_uppercase .share--icon {
                    height: {{ 16 | times: settings.desktop_font_scale | divided_by: 100.0 | round | at_least: 16 }}px;
                }
                .custom-type-preset .share--icon {
                  height: max(24px, calc(var(--body-s-font-size) * var(--body-s-line-height)));
                }
                .custom-type-preset .heading_s .share--icon,
                .custom-type-preset .heading_s_uppercase .share--icon {
                  height: max(16px, calc(var(--heading-s-font-size) * var(--heading-s-line-height)));	
                }
                .custom-type-preset .heading_xs .share--icon,
                .custom-type-preset .heading_xs_uppercase .share--icon {
                  height: max(16px, calc(var(--heading-xs-font-size) * var(--heading-xs-line-height)));	
                }
                .custom-type-preset .body_l .share--icon,
                .custom-type-preset .body_l_uppercase .share--icon {
                    height: max(16px, calc(var(--body-l-font-size) * var(--body-l-line-height)));
                }
                .custom-type-preset .body_m .share--icon,
                .custom-type-preset .body_m_uppercase .share--icon {
                    height: max(16px, calc(var(--body-m-font-size) * var(--body-m-line-height)));
                }
                .custom-type-preset .label_font .share--icon,
                .custom-type-preset .label_font_uppercase .share--icon {
                    height: max(16px, calc(var(--label-font-size) * var(--label-line-height)));
                }
                @media screen and (max-width: 920px) {
                  .share--icon {
                    height: {{ 24 | times: settings.mobile_font_scale | divided_by: 100.0 | round | at_least: 24 }}px;
                  }
                  .heading_s .share--icon,
                  .heading_s_uppercase .share--icon {
                    height: {{ 46 | times: settings.mobile_font_scale | divided_by: 100.0 | round | at_least: 16 | at_most: 128 }}px;
                  }
                  .heading_xs .share--icon,
                  .heading_xs_uppercase .share--icon {
                    height: {{ 36 | times: settings.mobile_font_scale | divided_by: 100.0 | round | at_least: 16 | at_most: 128 }}px;
                  }
                  .body_l .share--icon,
                  .body_l_uppercase .share--icon {
                      height: {{ 28 | times: settings.mobile_font_scale | divided_by: 100.0 | round | at_least: 16 }}px;
                  }
                  .body_m .share--icon,
                  .body_m_uppercase .share--icon {
                      height: {{ 26 | times: settings.mobile_font_scale | divided_by: 100.0 | round | at_least: 16 }}px;
                  }
                  .label_font .share--icon,
                  .label_font_uppercase .share--icon {
                      height: {{ 16 | times: settings.mobile_font_scale | divided_by: 100.0 | round | at_least: 16 }}px;
                  }
                }
              {% endstyle %}
              <div class="{{ section.settings.section_width }}">
                {% liquid
                  assign uppercase_font_text = false
                  assign bolder_font_text = false
                  assign uppercase_font_title = false
                  assign bolder_font_title = false
                  if settings.typography_preset == 'custom' and block.settings.text_size == 'default'
                    if settings.uppercase_label
                      assign uppercase_font_text = true
                    endif
                    if settings.bolder_font_label
                      assign bolder_font_text = true
                    endif
                    if settings.uppercase_body_s
                      assign uppercase_font_title = true
                    endif
                    if settings.bolder_font_body_s
                      assign bolder_font_title = true
                    endif
                  endif
                %}
                {% if block.settings.display_collapsible_link %}
                  {%- liquid 
                    if settings.typography_preset == 'avant_garde'
                      assign weight = settings.accent_icon_weight
                      if settings.swap_fonts
                          assign weight = settings.base_icon_weight
                      endif
                  else 
                      assign weight =  settings.base_icon_weight
                      if settings.swap_fonts
                          assign weight = settings.accent_icon_weight
                      endif
                  endif
                  if settings.typography_preset == 'custom'
                    assign weight = settings.custom_icon_weight
                  endif
                  -%}
                  <accordion-block>
                    <div class="accordion-toggle no-js-hidden share-toggle">
                      <div class="accordion__summary" tabindex="0">
                        <div class="summary__title share__button hover-opacity share__button--{{ settings.typography_preset }}{% if uppercase_font_title %} uppercase{% endif %}{% if bolder_font_title %} bolder-font{% endif %}{% if block.settings.text_size != 'default' %} {{ block.settings.text_size }}{% endif %}">
                          <div class="summary__title-name">
                            <span class="share__title">{{ "products.product.share_button" | t }}</span>
                          </div>
                          <span class="icon-accordion share__icon share--icon">
                            <span class="icon-accordion__close share__icon-close">
                              {% if weight_accordion_title == 'regular' %}
                                {% render 'icon-accordion-2', icon: 'share-regular' %}
                              {% elsif weight_accordion_title == 'medium' %}
                                {% render 'icon-accordion-2', icon: 'share-medium' %}
                              {% elsif weight_accordion_title == 'bold' %}
                                {% render 'icon-accordion-2', icon: 'share-bold' %}
                              {% endif %}
                            </span>
                            <span class="icon-accordion__open share__icon-open">
                              {% if weight_accordion_title == 'regular' %}
                                {% render 'icon', icon: 'cross-regular' %}
                              {% elsif weight_accordion_title == 'medium' %}
                                {% render 'icon', icon: 'cross-medium' %}
                              {% elsif weight_accordion_title == 'bold' %}
                                {% render 'icon', icon: 'cross-bold' %}
                              {% endif %}
                            </span>
                          </span>
                        </div>
                      </div>
                      <div class="accordion__panel">
                        <div class="accordion__content share-items">
                          {%- liquid
                            assign share_image = article.image | default: article.image
                            render 'share', share_settings: block.settings, share_title: article.title, share_link: article.url, share_image: share_image, uppercase_font_text: uppercase_font_text, bolder_font_text: bolder_font_text
                          -%}
                        </div>
                      </div>
                    </div>
                  </accordion-block>
                {% else %}
                {%- liquid
                  assign share_image = article.image | default: article.image
                  render 'share', share_settings: block.settings, share_title: article.title, share_link: article.url, share_image: share_image, uppercase_font_text: uppercase_font_text, bolder_font_text: bolder_font_text
                -%}
                {% endif %}
              </div>
            </div>
          {%- when 'line' -%}
            <div class="line-container line-container--{{ section.id }} line-container--{{ block.id }} {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}  section-padding--{{ settings.white_space }}" id="{{ block.id }}" data-block-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
              <div class="{{ section.settings.section_width }}">
                {% style %}
                  .line-container--{{ block.id }} {
                    --padding-top: {{ block.settings.desktop_padding_top }}px;
                    --padding-bottom: {{ block.settings.desktop_padding_bottom }}px;
                  }
                  @media screen and (max-width: 920px) {
                    .line-container--{{ block.id }} {
                      --padding-top: {{ block.settings.mobile_padding_top }}px;
                      --padding-bottom: {{ block.settings.mobile_padding_bottom }}px;
                    }
                  }
                {% endstyle %}  
                <span class="line"></span>
              </div>
            </div>

          {%- when 'tags' -%}
            {% if article.tags.size > 0 %}
              {% liquid
                assign uppercase_font_text = false
                assign bolder_font_text = false
                if settings.typography_preset == 'custom' and block.settings.text_size == 'default'
                  if settings.uppercase_label
                    assign uppercase_font_text = true
                  endif
                  if settings.bolder_font_label
                    assign bolder_font_text = true
                  endif
                endif
              %} 
              <div class="tags-block {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}  section-padding--{{ settings.white_space }}" {{ block.shopify_attributes }}>
                <p class="tags-list tags-list--{{ settings.typography_preset }}{% if uppercase_font_text %} uppercase{% endif %}{% if bolder_font_text %} bolder-font{% endif %}{% if block.settings.text_size != 'default' %} {{ block.settings.text_size }}{% endif %} {{ section.settings.section_width }}">
                  <span class="tags-title {% if settings.dim_text %}dim{% endif %}">{{ "blogs.article.tags" | t }}:</span>
                  {% for tag in article.tags %}
                    <span>
                      <a href="/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}" class="tags-item link-button {% if settings.enable_animated_underline %}link-button--underline{% endif %}">
                        {{ tag }}
                      </a>
                    </span>
                  {% endfor %}
                </p>
              </div>
            {% endif %}

          {%- when 'prev_and_next' -%}
            <div class="navigation-block {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}  section-padding--{{ settings.white_space }}" {{ block.shopify_attributes }}>
              <ul class="article__navigation {% if settings.show_lines %}article__navigation--lines{% endif %} {{ section.settings.section_width }}">
                <li class="article__navigation-prev">
                    <a class="article__navigation-link icon-button link-button button--{{ settings.typography_preset }} {% if settings.typography_preset == 'custom' %}{% if settings.regular_button_size == 'default' %}button-font--default{% else %}{{ settings.regular_button_size }}{% endif %}{% endif %} {% if settings.enable_animated_underline %}link-button--underline{% endif %}" href="{{ blog.previous_article.url }}" {% unless blog.previous_article %}disabled{% endunless %}>
                      <span class="article__navigation-icon">
                        {% if weight == 'regular' %}
                          {% render 'icon-accordion', icon: 'arrow-left-regular' %}
                        {% elsif weight == 'medium' %}
                            {% render 'icon-accordion', icon: 'arrow-left-medium' %}
                        {% elsif weight == 'bold' %}
                            {% render 'icon-accordion', icon: 'arrow-left-bold' %}
                        {% endif %}
                      </span>
                      <span class="article__navigation-button icon-button__title">{{ "blogs.article.previous_post" | t }}</span>
                    </a>
                </li>
                <li class="article__navigation-next">
                    <a class="article__navigation-link icon-button link-button button--{{ settings.typography_preset }} {% if settings.typography_preset == 'custom' %}{% if settings.regular_button_size == 'default' %}button-font--default{% else %}{{ settings.regular_button_size }}{% endif %}{% endif %} {% if settings.enable_animated_underline %}link-button--underline{% endif %}" href="{{ blog.next_article.url }}" {% unless blog.next_article %}disabled{% endunless %}>
                      <span class="article__navigation-button icon-button__title">{{ "blogs.article.next_post" | t }}</span>
                      <span class="article__navigation-icon">
                        {% if weight == 'regular' %}
                          {% render 'icon-accordion', icon: 'arrow-right-regular' %}
                        {% elsif weight == 'medium' %}
                            {% render 'icon-accordion', icon: 'arrow-right-medium' %}
                        {% elsif weight == 'bold' %}
                            {% render 'icon-accordion', icon: 'arrow-right-bold' %}
                        {% endif %}
                      </span>
                    </a>
                </li>
                <li class="article__navigation-back {% if settings.enable_buttons_zoom %}buttons-zoom{% endif %}">
                  <a href="{{ blog.url }}" class="article-template__link outlined-button button--{{ settings.typography_preset }} {% if settings.typography_preset == 'custom' %}{% if settings.regular_button_size == 'default' %}button-font--default{% else %}{{ settings.regular_button_size }}{% endif %}{% endif %}">
                    {% if block.settings.button_label != blank %}{{ block.settings.button_label }}{% else %}{{ 'blogs.article.back_to_blog' | t: title: blog.title }}{% endif %}
                  </a>
                </li>
              </ul>
            </div>
          {%- when 'image_grid' -%}
            <div class="navigation-block {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}  section-padding--{{ settings.white_space }}" {{ block.shopify_attributes }}>
                {%- render 'image-grid', 
                  block: block,
                  linked_page: block.settings.page,
