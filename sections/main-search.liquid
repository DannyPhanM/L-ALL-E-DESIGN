<div class="template-search template-search--{{ settings.white_space }} ordinal-section ordinal-section--{{ settings.white_space }} {% if settings.show_lines %}ordinal-section--lines lines{% endif %} {% if section.settings.enable_filtering and search.results_count > 1 %}{% if settings.navigation_layout == 'header_based' and section.settings.desktop_filter_style != 'drawer' %}update-gap{% endif %}{% endif %}  
  {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }} section-padding--{{ settings.white_space }}">
  <div class="template-search__header template-search__header--{{ settings.white_space }}">
    {%- if search.performed -%}
      <h1 class="search__heading {% if settings.accent_color_for_headings %}heading--accent{% endif %} heading--{{ settings.typography_preset }} {% if section.settings.heading_size != 'default' %}{{ section.settings.heading_size }}{% else %}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_heading_xs %} uppercase{% endif %}{% if settings.bolder_font_heading_xs %} bolder-font{% endif %}{% endif %}{% endif %} center">{% if search.results_count > 1 %}{{ 'templates.search.results_with_count_and_term.other' | t: count: search.results_count, terms: search.terms }}{% else %}{{ 'templates.search.results_with_count_and_term.one' | t: count: search.results_count, terms: search.terms }}{% endif %}</h1>
    {%- else -%}
      <h1 class="search__heading {% if settings.accent_color_for_headings %}heading--accent{% endif %} heading--{{ settings.typography_preset }} {% if section.settings.heading_size != 'default' %}{{ section.settings.heading_size }}{% else %}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_heading_xs %} uppercase{% endif %}{% if settings.bolder_font_heading_xs %} bolder-font{% endif %}{% endif %}{% endif %} center">{{ 'templates.search.search_title' | t }}</h1>
    {%- endif -%}
    <div class="template-search__search">
        <form action="{{ routes.search_url }}" method="get" role="search" class="search-modal__form">
          <div class="field search-field">
            <input
              class="search__input search__input--{{ settings.typography_preset }} {% if settings.typography_preset == 'custom' %}{% if settings.uppercase_heading_xs %} uppercase{% endif %}{% if settings.bolder_font_heading_xs %} bolder-font{% endif %}{% endif %} field__input search-field__text"
              id="Search-In-Template"
              type="search"
              name="q"
              value="{{ search.terms | escape }}"
              placeholder="{{ 'templates.search.placeholder' | t }}"
              autocomplete="off"
              {%- if settings.enable_quick_search %}
                role="combobox"
                aria-expanded="false"
                aria-owns="predictive-search-results-list"
                aria-controls="predictive-search-results-list"
                aria-haspopup="listbox"
                aria-autocomplete="list" 
                autocorrect="off"
                autocomplete="off"
                autocapitalize="off"
                spellcheck="false"
              {% endif -%}
            />
            <button type="submit" class="search-field__icon" aria-label="{{ 'templates.search.search_for' | t: terms: search.terms }}" tabindex="-1">
              <span class="search__icon">
                {% if weight == 'regular' %}
                    {% render 'icon', icon: 'search-regular' %}
                {% elsif weight == 'medium' %}
                    {% render 'icon', icon: 'search-medium' %}
                {% elsif weight == 'bold' %}
                    {% render 'icon', icon: 'search-bold' %}
                {% endif %}
              </span>
            </button>
            <label class="visually-hidden" for="Search-In-Template" aria-hidden="true">{{ 'templates.search.search_title' | t }}</label>
            <input type="hidden" name="options[prefix]" value="last"/>
          </div>
        </form>
      {%- if settings.enable_quick_search -%}
        </predictive-search>
      {%- endif -%} 
    </div>
  </div>
  {%- if search.performed -%}
    {% if section.settings.enable_filtering and search.results_count > 1 and settings.navigation_layout == 'header_based' and section.settings.desktop_filter_style == 'vertical' %}
    <div class="template-search__results-wrapper">
      <div class="aside-filters template-search__aside-filters">
        {% render 'facets-vertical', results: search, enable_filtering: section.settings.enable_filtering %}
      </div>
    {% endif %}
    <div class="template-search__results template-search__results--{{ settings.white_space }} {% if section.settings.enable_filtering and search.results_count > 1 %}{% if settings.navigation_layout == 'sidebar_based' %}drawer-filter{% else %}{{ section.settings.desktop_filter_style }}-filter{% endif %}{% endif %}">
      {%- if section.settings.enable_filtering and search.results_count > 0 -%}
        {%- if search.performed -%}
          {{ 'component-facets.css' | asset_url | stylesheet_tag }}
            <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
            
            <div id="main-collection-filters" data-id="{{ section.id }}" {% if settings.navigation_layout == 'header_based' or section.settings.desktop_filter_style == 'horizontal' %}class="main-collection-filters--{{ section.settings.desktop_filter_style }}"{% endif %}>
              {% render 'facets', results: search, enable_filtering: section.settings.enable_filtering, button_style: section.settings.filtering_style, total_products_heading_size: section.settings.total_products_heading_size %}
            </div>
          
        {%- endif -%}
      {%- endif -%}
      <div class="product-grid-container">
        <div id="ProductGridContainer--{{  section.id }}">
          {% paginate search.results by section.settings.results_per_page %}
            {%- if search.performed -%}
              {%- if search.results_count == 0 -%}
                <div class="collection" id="product-grid--{{ section.id }}" data-id="{{ section.id }}">
                  <div class="title-wrapper center">
                    <p class="title title--empty {% if settings.enable_animated_underline %}link--underline{% endif %} body-text--{{ settings.typography_preset }}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_body_m %} uppercase{% endif %}{% if settings.bolder_font_body_m %} bolder-font{% endif %}{% endif %}">
                      {%- liquid
                        if search.filters.size > 0
                          assign sort_by = search.sort_by | default: search.default_sort_by
                          assign search_url = '?q=' | append: search.terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
                          echo 'templates.search.no_results' | t: terms: search.terms
                          echo '<br/>'
                          echo 'templates.search.use_fewer_filters_html' | t: link: search_url, class: "link link--underline"
                        else
                          echo 'templates.search.no_results' | t: terms: search.terms
                          echo '<br/>'
                        endif
                      -%}
                    </p>
                  </div>
                </div>
              {%- else -%}
                <div class="collection collection--{{ settings.white_space }} {% if settings.show_lines %}lines{% endif %}">
                  <ul id="product-grid--{{ section.id }}" data-id="{{ section.id }}" class="grid grid-container product-grid product-grid--{{ section.settings.grid_type }} product-grid--{{ settings.white_space }} {% if settings.show_lines %} lines{% endif %} {% if section.settings.mobile_layout == '1' or search.results_count == 1 %} one-column{% endif %}" role="list">
                    {%- for item in search.results -%}
                      {%- liquid
                        assign lazy_load = true
                        if forloop.first
                          assign lazy_load = false
                        endif
                      -%}
                      <li class="grid__item">
                        {%- case item.object_type -%}
                          {%- when 'product' -%}
                            {%- assign card_product_settings = section.settings -%}
                            {% render 'card-product',
                              card_product: item,
                              image_ratio: card_product_settings.image_ratio,
                              show_vendor: card_product_settings.show_vendor,
                              hover_behavior: card_product_settings.hover_behavior,
                              show_bullets: card_product_settings.show_bullets,
                              enable_quick_view: card_product_settings.enable_quick_view,
                              enable_add_to_cart: card_product_settings.enable_add_to_cart,
                              price_position: card_product_settings.price_position,
                              max_product_name_characters: card_product_settings.max_product_name_characters,
                              show_short_description: card_product_settings.show_short_description,
                              enable_color_pills: card_product_settings.enable_color_pills,
                              show_rating: card_product_settings.show_rating,
                              show_pickup_availability: section.settings.show_pickup_availability,
                              desktop_grid_item_width: desktop_grid_item_width,
                              mobile_grid_item_width: mobile_grid_item_width
                            %}
                          {%- when 'article' -%}
                            <div class="card-container">
                              <div class="blog-articles__article article article--{{ settings.white_space }} {% if settings.show_lines %}article--lines{% endif %}">
                                <a href="{{ item.url }}" class="article-card">
                                  {% if section.settings.show_blog_post_image and item.image %}
                                    <div class="card__picture-wrapper">
                                      <div class="card__media lazy-image-container blog-post__image ratio-{{ section.settings.blog_image_ratio }}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
                                      {% if settings.images_loading != 'disable' %}
                                        <figure class="lazy-image lazy-image--{{ settings.images_loading }}" style="--desktop-asp-rat: {{ item.image.aspect_ratio }}">
                                      {% endif %}
                                        <img srcset="{%- if item.image.width >= 165 -%}{{ item.image | image_url: width: 165 }} 165w,{%- endif -%}
                                          {%- if item.image.width >= 375 -%}{{ item.image | image_url: width: 375 }} 375w,{%- endif -%}
                                          {%- if item.image.width >= 550 -%}{{ item.image | image_url: width: 550 }} 550w,{%- endif -%}
                                          {%- if item.image.width >= 750 -%}{{ item.image | image_url: width: 750 }} 750w,{%- endif -%}
                                          {%- if item.image.width >= 1100 -%}{{ item.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                                          {%- if item.image.width >= 1500 -%}{{ item.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                                          {%- if item.image.width >= 1700 -%}{{ item.image | image_url: width: 1700 }} 1700w,{%- endif -%}
                                          {%- if item.image.width >= 2000 -%}{{ item.image | image_url: width: 2000 }} 2000w,{%- endif -%}
                                          {{ item.image | image_url }} {{ item.image.width }}w" src="{{ item.image | image_url: width: 1700 }}"
                                          sizes="
                                          (min-width: {{ settings_page_width }}) calc(({{ settings_page_width }} - 200px)),
                                          (min-width: 750px) calc(100vw - 2rem),
                                          calc(100vw - 3rem)"
                                          style="object-position: {{ section.settings.blog_focal_point }}"
                                          draggable="false"
                                          {% if settings.images_loading != 'disable' %}
                                            onload="this.parentNode.classList.add('lazyloaded');"
                                          {% endif %}
                                          alt="{{ item.image.alt | escape }}" loading="lazy" width="{{ item.image.width }}" height="{{ item.image.height }}" class="card__image">
                                        {% if settings.images_loading != 'disable' %}
                                          {% if settings.images_loading != 'fade_scale' %}
                                          <div class="lazy-image__preloader lazy-image__preloader--full lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                                            <img 
                                            alt="{{ item.image.alt | escape }}" 
                                            src="{{ item.image | image_url: width: 10 }}"
                                            draggable="false"
                                            width="10" 
                                            height="10">
                                          </div>
                                          {% endif %}
                                      </figure>
                                      {% endif %}
                                      </div>
                                    </div>
                                  {% endif %}
                                  <div>
                                    {%- if section.settings.show_date or section.settings.show_author or section.settings.show_number_of_comments and item.comments_count > 0 and item.comments_enabled? -%}
                                      <div class="article-card__item info card__vendor--{{ settings.typography_preset }}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_body_s %} uppercase{% endif %}{% if settings.bolder_font_body_s %} bolder-font{% endif %}{% endif %} {% if settings.dim_text %}dim{% endif %}">
                                        {%- if section.settings.show_date -%}
                                            <span class="info__date">
                                            {{- item.published_at | date: format: 'abbreviated_date' -}}
                                            </span>
                                        {%- endif -%}
                                        {%- if section.settings.show_author -%}
                                            <span class="info__author">{{ item.author }}</span>
                                        {%- endif -%}
                                        {%- if section.settings.show_number_of_comments and item.comments_count > 0 and item.comments_enabled? -%}
                                            <span class="info__comments-count">{% if item.comments_count == 1 %}{{ 'blogs.article.comments.one' | t: count: item.comments_count }}{% else %}{{ 'blogs.article.comments.other' | t: count: item.comments_count }}{% endif %}</span>
                                        {%- endif -%}
                                      </div>
                                    {%- endif -%}
                                      <h3 class="article-card__item article-card__title card__title--{{ settings.typography_preset }}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_body_s %} uppercase{% endif %}{% if settings.bolder_font_body_s %} bolder-font{% endif %}{% endif %}" id="Article-{{ article.id }}">{{ item.title | escape }}</h3>
                                  </div>
                                </a>
                              </div>
                            </div>
                          {%- when 'page' -%}
                          <div class="card-container">
                            <a href="{{ item.url }}" class="page-link card__title--{{ settings.typography_preset }}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_body_s %} uppercase{% endif %}{% if settings.bolder_font_body_s %} bolder-font{% endif %}{% endif %}">
                              <p>{{ item.title }}</p>
                            </a>
                          </div>
                        {%- endcase -%}
                      </li>
                    {%- endfor -%}
                  </ul>
                  {%- if paginate.pages > 1 -%}
                    {% render 'pagination', paginate: paginate, pagination: section.settings.pagination, infinite_scroll: section.settings.infinite_scroll %}
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- endif -%}
          {% endpaginate %}
        </div>
      </div>
    </div>
    {% if section.settings.enable_filtering and search.results_count > 1 and settings.navigation_layout == 'header_based' and section.settings.desktop_filter_style == 'vertical' %}
    </div>
    {% endif %}
  {%- endif -%} 
</div>

