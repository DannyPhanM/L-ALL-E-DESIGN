{% style %}
#shopify-section-{{ section.id }} {
  --padding-top: {{ section.settings.desktop_padding_top }}px;
  --padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
  --desktop-grid-type: {{ section.settings.desktop_grid_type }};
}
  @media screen and (max-width: 920px) {
    #shopify-section-{{ section.id }} {
      --padding-top: {{ section.settings.mobile_padding_top }}px;
      --padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }
  }
{% endstyle %}
{% if section.blocks.size > 0 %}
<div class="section-padding--{{ settings.white_space }} ordinal-section ordinal-section--{{ settings.white_space }} {% if settings.show_lines %}ordinal-section--lines{% endif %}  {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}">
  <div class="product-details product-details--{{ section.settings.section_width }} product-details--{{ settings.white_space }} {% if settings.show_lines %}product-details--lines{% endif %}">
    {% if section.settings.subheading != blank %}
      <{{ section.settings.subheading_tag }} class="product-details__subheading product-details__subheading--{{ settings.typography_preset }} {% if section.settings.subheading_size != 'default' %}{{ section.settings.subheading_size }}{% else %}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_label %} uppercase{% endif %}{% if settings.bolder_font_label %} bolder-font{% endif %}{% endif %}{% endif %}">{{ section.settings.subheading }}
      </{{ section.settings.subheading_tag }}>
    {% endif %}
    <div class="product-details__wrapper">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'description' -%}
            {% if product.description != blank or block.settings.text != blank %}
              <div class="description-block" {{ block.shopify_attributes }}>
                {% if block.settings.heading != blank %}
                  {% liquid
                    assign heading_text = block.settings.heading
                    assign final_text = ''
                    assign split_text_curly = heading_text | split: '{'
                    for part in split_text_curly
                        if part contains '}'
                            assign split_curly = part | split: '}'
                            assign styled_text = split_curly[0]
                            assign after_curly = split_curly[1]
                            assign final_text = final_text | append: '<span class="styled">' | append: styled_text | append: '</span>' | append: after_curly
                        else
                            assign final_text = final_text | append: part
                        endif
                    endfor
                  %}
                  <h3 class="description-block__heading custom-heading description-block__heading--{{ settings.typography_preset }} {% if block.settings.heading_size != 'default' %}{{ block.settings.heading_size }}{% else %}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_label %} uppercase{% endif %}{% if settings.bolder_font_label %} bolder-font{% endif %}{% endif %}{% endif %}">{{ final_text }}
                  </h3>
                {% endif %}
                <div class="description-block__content description-block__content--{{ settings.typography_preset }} {% if block.settings.text_size != 'default' %}{{ block.settings.text_size }}{% else %}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_body_m %} uppercase{% endif %}{% if settings.bolder_font_body_m %} bolder-font{% endif %}{% endif %}{% endif %}">
                  <div class="description-block__text">
                    {% if product.description != blank %}
                      <div class="rte rte-block rte--large">{{ product.description }}</div>
                    {% endif %}
                    {% if block.settings.text != blank %}
                      <div class="richtext {% if settings.enable_animated_underline %}richtext-link--underline{% endif %}">
                        {{ block.settings.text }}
                      </div>
                    {% endif %}
                  </div>
                  {% if block.settings.show_product_image and product.featured_image != blank %}
                    <div class="description-block__image {% if settings.enable_blending %}enable-blending{% endif %} description-block__image--{{ block.id }}" {% if settings.disable_right_click %}oncontextmenu="return false"{% endif %}>
                      {% style %}
                        .description-block__image--{{ block.id }} {
                            {% if block.settings.context_image_radius == 'default' %}
                                --context-image-radius: {{ settings.images_and_sections_radius }};
                            {% else %}
                                --context-image-radius: {{ block.settings.context_image_radius }};
                            {% endif %}
                          }
                        {% endstyle %}
                      {% liquid
                        assign settings_page_width = settings.max_page_width | append: 'px'
                        if settings.max_page_width == 'full_width'
                        assign settings_page_width = '100vw'
                        endif
                      %}
                      {% comment %} theme-check-disable ImgLazyLoading {% endcomment %}
                    {% if settings.images_loading != 'disable' %}
                      <figure class="lazy-image ratio-original lazy-image--{{ settings.images_loading }}" style="--desktop-asp-rat: {{ product.featured_image.aspect_ratio }}">
                    {% endif %}
                      <img srcset="{%- if product.featured_image.width >= 165 -%}{{ product.featured_image | image_url: width: 165 }} 165w,{%- endif -%}
                        {%- if product.featured_image.width >= 375 -%}{{ product.featured_image | image_url: width: 375 }} 375w,{%- endif -%}
                        {%- if product.featured_image.width >= 550 -%}{{ product.featured_image | image_url: width: 550 }} 550w,{%- endif -%}
                        {%- if product.featured_image.width >= 750 -%}{{ product.featured_image | image_url: width: 750 }} 750w,{%- endif -%}
                        {%- if product.featured_image.width >= 1100 -%}{{ product.featured_image | image_url: width: 1100 }} 1100w,{%- endif -%}
                        {%- if product.featured_image.width >= 1500 -%}{{ product.featured_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                        {{ product.featured_image | image_url }} {{ product.featured_image.width }}w" src="{{ product.featured_image | image_url: width: 1700 }}"
                        sizes="
                        (min-width: {{ settings_page_width }}) calc(({{ settings_page_width }} - 200px) * 0.5),
                        (min-width: 750px) calc((100% - 2rem) * 0.5),
                        calc((100% - 3rem) * 0.10)"
                        {% if settings.images_loading != 'disable' %}
                          loading="lazy"
                          onload="this.parentNode.classList.add('lazyloaded');"
                        {% else %}
                            {% if section.index > 2 %}loading="lazy"{% endif %}
                        {% endif %}
                        alt="{{ product.title | escape }}" draggable="false" width="{{ product.featured_image.width }}" height="{{ product.featured_image.height }}" class="card__image">
                      {% if settings.images_loading != 'disable' %}
                        {% if settings.images_loading != 'fade_scale' %}
                        <div class="lazy-image__preloader lazy-image__preloader--full lazy-image__preloader-{{ settings.images_loading }}" aria-hidden="true">
                            <img 
                            alt="{{ product.featured_image.alt | escape }}" 
                            src="{{ product.featured_image | image_url: width: 10 }}"
                            draggable="false"
                            width="10" 
                            height="10">
                        </div>
                        {% endif %}
                        </figure>
                    {% endif %}
                      {% comment %} theme-check-enable ImgLazyLoading {% endcomment %}
                    </div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {%- when 'table' -%}
            <div class="table-block" {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                {% liquid
                  assign heading_text = block.settings.heading
                  assign final_text = ''
                  assign split_text_curly = heading_text | split: '{'
                  for part in split_text_curly
                      if part contains '}'
                          assign split_curly = part | split: '}'
                          assign styled_text = split_curly[0]
                          assign after_curly = split_curly[1]
                          assign final_text = final_text | append: '<span class="styled">' | append: styled_text | append: '</span>' | append: after_curly
                      else
                          assign final_text = final_text | append: part
                      endif
                  endfor
                %}
                <h3 class="table-block__heading custom-heading table-block__heading--{{ settings.typography_preset }} {% if block.settings.heading_size != 'default' %}{{ block.settings.heading_size }}{% else %}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_label %} uppercase{% endif %}{% if settings.bolder_font_label %} bolder-font{% endif %}{% endif %}{% endif %} {% if settings.swap_fonts %}reverse{% endif %}">{{ final_text }}
                </h3>
              {% endif %}
              <div class="table-block__content">
                <div class="table-block__text table-block__text--{{ settings.typography_preset }} {% if block.settings.table_text_size != 'default' %}{{ block.settings.table_text_size }}{% else %}{% if settings.typography_preset == 'custom' %}{% if settings.uppercase_body_m %} uppercase{% endif %}{% if settings.bolder_font_body_m %} bolder-font{% endif %}{% endif %}{% endif %} {% if settings.swap_fonts %}reverse{% endif %} richtext {% if settings.enable_animated_underline %}richtext-link--underline{% endif %}">
                {%- liquid 
                    assign table = block.settings.table_content | remove_first: '<p>' | remove_last: '</p>' | split: '</p><p>'
                    -%}
                  {% for table_row in table %}
                     {% liquid
                      assign col_1 = table_row | split: ':' | first | rstrip
                      assign col_2 = table_row | remove: col_1 | remove_first: ':' | lstrip
                      assign col_2_strip = col_2 | strip
                      if col_2 contains ','
                        assign parts = col_2_strip | split: ','
                        assign cleaned_string = ''
                        for part in parts
                          assign trimmed_part = part | strip
                          unless forloop.last and trimmed_part == ''
                            assign cleaned_string = cleaned_string | append: trimmed_part
                            if forloop.last == false
                              assign cleaned_string = cleaned_string | append: ", "
                            endif
                          endunless
                        endfor
                        assign col_2 = cleaned_string
                      endif
                    %}
                    {% if col_2 != blank and col_2_strip != ',' and col_2_strip != '/' %}
                      <p class="table-block__row">
                        <span class="table-block__col table-block__col-1 {% if settings.dim_text %}dim{% endif %}">{{ col_1 }}:</span>
                        <span class="table-block__col table-block__col-2">{{ col_2 }}</span>               
                      </p>
                    {% endif %}
                  {% endfor %} 
                </div>
              </div>
            </div>
          {%- when 'collapsible_tab' -%}
            {% liquid
              assign uppercase_title = false
              assign bolder_title = false
              assign uppercase_text = false
              assign bolder_text = false
              if settings.typography_preset == 'custom'
                if settings.uppercase_body_l and block.settings.collapsible_tabs_size == 'default'
                    assign uppercase_title = true
                endif
                if settings.bolder_font_body_l and block.settings.collapsible_tabs_size == 'default'
                    assign bolder_title = true
                endif
                if settings.uppercase_body_m and block.settings.text_size == 'default'
                    assign uppercase_text = true
                endif
                if settings.bolder_font_body_m and block.settings.text_size == 'default'
                    assign bolder_text = true
                endif
              endif
            %}
            {%- render 'accordion', accordion_settings: block.settings, page: block.settings.page, block_item: block, text_size: block.settings.text_size, title_size: block.settings.collapsible_tabs_size, uppercase_title: uppercase_title, bolder_title: bolder_title, uppercase_text: uppercase_text, bolder_text: bolder_text -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>
