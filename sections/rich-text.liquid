{% style %}
    #shopify-section-{{ section.id }} {
    --padding-top: {{ section.settings.desktop_padding_top }}px;
    --padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
    --text-alignment: {% if section.settings.center_text %}center{% else %}flex-start{% endif %};
  
    {% if section.settings.color_type == 'invert' %}
          --layout-text-color:
          {{ settings.layout_background_color.red }},
          {{ settings.layout_background_color.green }},
          {{ settings.layout_background_color.blue }};
          --layout-background-color:
          {{ settings.layout_text_color.red }},
          {{ settings.layout_text_color.green }}, 
          {{ settings.layout_text_color.blue }};
    {% endif %}
    {% if section.settings.color_type == 'custom' %}
        --layout-text-color:
        {{ section.settings.text_color.red }},
        {{ section.settings.text_color.green }}, 
        {{ section.settings.text_color.blue }};
        --layout-background-color:
        {{ section.settings.background_color.red }},
        {{ section.settings.background_color.green }}, 
        {{ section.settings.background_color.blue }};
    {% endif %}
      background-color: rgb(var(--layout-background-color));
      color: rgb(var(--layout-text-color));
    }

    @media screen and (max-width: 920px) {
      #shopify-section-{{ section.id }} {
        --padding-top: {{ section.settings.mobile_padding_top }}px;
        --padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      }
    }
{% endstyle %}

<div class="rich-text rich-text--{{ settings.white_space }} ordinal-section ordinal-section--{{ settings.white_space }} section-padding--{{ settings.white_space }} {% if settings.show_lines %}ordinal-section--lines lines{% endif %} {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }} color-{{ section.settings.color_type }} {% if section.settings.color_type != 'default' %}no-default-color{% endif %}">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.section_width }} {% if settings.enable_buttons_zoom %}buttons-zoom{% endif %} {% if section.settings.center_text %}center{% else %}flex-start{% endif %}" style="text-align: {% if section.settings.center_text %}center{% else %}start{% endif %};">
        {%- for block in section.blocks -%}
            {%- case block.type -%}
                {%- when 'subheading' -%}
                  {% liquid
                    assign uppercase_font = false
                    assign bolder_font = false
                    if settings.typography_preset == 'custom' and block.settings.subheading_size == 'default'
                      if settings.uppercase_label
                        assign uppercase_font = true
                      endif
                      if settings.bolder_font_label
                        assign bolder_font = true
                      endif
                    endif
                  %} 
                    <{{ block.settings.subheading_tag }} {{ block.shopify_attributes }} class="content-subheading{% if uppercase_font %} uppercase{% endif %}{% if bolder_font %} bolder-font{% endif %} content-subheading--{{ settings.typography_preset }} {% if block.settings.subheading_size != 'default' %}{{ block.settings.subheading_size }}{% endif %} {% if settings.dim_text %}dim{% endif %}">{{ block.settings.subheading }}</{{ block.settings.subheading_tag }}>
                {%- when 'heading' -%}  
                  {% liquid
                    assign uppercase_font = false
                    assign bolder_font = false
                    if settings.typography_preset == 'custom' and block.settings.heading_size == 'default'
                      if settings.uppercase_heading_xs
                        assign uppercase_font = true
                      endif
                      if settings.bolder_font_heading_xs
                        assign bolder_font = true
                      endif
                    endif

                    assign heading_text = block.settings.heading
                    assign final_text = ''
                    assign split_text_curly = heading_text | split: '{'
                    for part in split_text_curly
                      if part contains '}'
                        assign split_curly = part | split: '}'
                        assign styled_text = split_curly[0]
                        assign after_curly = split_curly[1]
                        assign final_text = final_text | append: '<span class="styled">' | append: styled_text | append: '</span>' | append: after_curly
                      else
                        assign final_text = final_text | append: part
                      endif
                    endfor
                  %}  
                    <{{ block.settings.heading_tag }} {{ block.shopify_attributes }} class="content-heading custom-heading{% if uppercase_font %} uppercase{% endif %}{% if bolder_font %} bolder-font{% endif %} {% if section.settings.color_type == 'default' and settings.accent_color_for_headings %}content-heading--accent{% endif %} content-heading--{{ settings.typography_preset }} {% if block.settings.heading_size != 'default' %}{{ block.settings.heading_size }}{% endif %}">{{ final_text }}</{{ block.settings.heading_tag }}>
                {%- when 'text' -%}
                  {% liquid
                    assign uppercase_font = false
                    assign bolder_font = false
                    if settings.typography_preset == 'custom' and block.settings.text_size == 'default'
                      if settings.uppercase_body_m
                        assign uppercase_font = true
                      endif
                      if settings.bolder_font_body_m
                        assign bolder_font = true
                      endif
                    endif
                  %} 
                    <div {{ block.shopify_attributes }} class="content-text {% if uppercase_font %} uppercase{% endif %}{% if bolder_font %} bolder-font{% endif %} content-text--{{ settings.typography_preset }} {% if block.settings.text_size != 'default' %}{{ block.settings.text_size }}{% endif %} {% if block.settings.dim_text %}dim{% endif %} richtext {% if settings.enable_animated_underline %}richtext-link--underline{% endif %}">
                        {{ block.settings.text }}
                    </div>
                {%- when 'context_image' -%}
                  {%- render 'context-image', block_or_section: block, shopify_attributes: true -%}
                {%- when 'block_image' -%}
                  {%- render 'block-image', block: block -%}
                {%- when 'button' -%}
                  {%- render 'button', block: block -%}
                {%- when 'empty_space' -%}
                  {%- render 'empty-space', block: block -%}
                {%- when 'line' -%}
                  {%- render 'line', block: block -%}
                {%- when 'video_button' -%}
                  {%- render 'video-button', block_settings: block.settings, block: block -%}
                {%- when 'custom_liquid' -%}
                    {%- render 'custom-liquid', block: block -%}
                {%- when 'social_media' -%}
                  {%- render 'social-media', social-media_settings: block.settings, type: block.type, block_item: block, section_settings: section.settings -%}
                {%- when 'contacts' -%}
                  {%- render 'contacts', contacts_settings: block.settings, block_item: block -%}
                {%- when 'promo_code' -%}
                  {%- render 'promo-code', block: block, promo_code: block.settings.promo_code, center_text: section.settings.center_text -%}
                {%- when 'countdown_timer' -%}
                  {%- render 'countdown-timer', block: block, section_id: section.id, section_blocks_count: section.blocks.size -%}
            {%- endcase -%}
        {%- endfor -%}
    </div>
</div>
{% endif %}

