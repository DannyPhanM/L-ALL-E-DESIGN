{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

{%- liquid
      case section.settings.sort_collections_by
        when 'products_count_high' or 'products_count_low'
          assign collections = collections | sort: 'all_products_count'
        when 'date' or 'date_reversed'
          assign collections = collections | sort: 'published_at'
      endcase

      if section.settings.sort_collections_by == 'products_count_high' or section.settings.sort_collections_by == 'date_reversed' or section.settings.sort_collections_by == 'alphabetical_reversed'
        assign collections = collections | reverse
      endif
      assign uppercase_font_heading = false
      assign bolder_font_heading = false
      if settings.typography_preset == 'custom' and section.settings.heading_size == 'default'
          if settings.uppercase_heading_xs
                  assign uppercase_font_heading = true
          endif
          if settings.bolder_font_heading_xs
                  assign bolder_font_heading = true
          endif
      endif
-%}

{% style %}
  #shopify-section-{{ section.id }} {
      --focal-point: {{ section.settings.focal_point }};
      --padding-top: {{ section.settings.desktop_padding_top }}px;
      --padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
  }
  @media screen and (max-width: 920px) {
    #shopify-section-{{ section.id }} {
      --padding-top: {{ section.settings.mobile_padding_top }}px;
      --padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }
  }
{% endstyle %}

<div class="section-padding--{{ settings.white_space }} ordinal-section ordinal-section--{{ settings.white_space }} {% if settings.show_lines %}ordinal-section--lines{% endif %}  {% if settings.max_page_width == '1400' or settings.max_page_width == '1200' %}page-width {% endif %} page-width--{{ settings.max_page_width }}">
  <div class="section-collection-list section-collection-list--{{ settings.white_space }} {% if settings.show_lines %} lines{% endif %}">
    {% liquid
      assign heading_text = section.settings.heading
      assign final_text = ''
      assign split_text_curly = heading_text | split: '{'
      for part in split_text_curly
          if part contains '}'
              assign split_curly = part | split: '}'
              assign styled_text = split_curly[0]
              assign after_curly = split_curly[1]
              assign final_text = final_text | append: '<span class="styled">' | append: styled_text | append: '</span>' | append: after_curly
          else
              assign final_text = final_text | append: part
          endif
      endfor
    %}
    <h1 class="heading custom-heading heading--{{ settings.typography_preset }} {% if section.settings.heading_size != 'default' %}{{ section.settings.heading_size }}{% else %}{% if uppercase_font_heading %} uppercase{% endif %}{% if bolder_font_heading %} bolder-font{% endif %}{% endif %} {% if settings.accent_color_for_headings %}heading--accent{% endif %} {% if settings.show_lines == true %} {% if settings.accent_color_for_headings %}heading--accent{% endif %} lines{% endif %}{% if settings.center_text %} center{% endif %}">{{ final_text }}{%- if section.settings.show_number == true -%}<span class="heading__details"> ({{ collections | size }})</span>{%- endif -%}</h1>
    <ul class="collection-list grid grid--{{ settings.white_space }} grid--{{ section.settings.grid_type }}{% if section.settings.mobile_layout == '1' or collections.size == 1 %} grid-mobile-column{% endif %}{% if settings.show_lines == true %} lines{% endif %}" role="list">
        {%- for collection in collections -%}
          {% assign lazy_load = false %}
          {%- if forloop.index > 2 -%}
            {%- assign lazy_load = true -%}
          {%- endif -%}
            <li class="collection-list__item grid__item">
                {% render 'card-collection', card_collection: collection, image_ratio: section.settings.image_ratio, collection_list: true %}
            </li>
        {%- endfor -%}
    </ul>
  </div>
</div>


